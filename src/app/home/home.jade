pro-top-navbar(logout-action="appController.logout" data-search-mask-active="vm.interfaceController.hideSearchMask")
.search-active-mask(data-ng-class="{'off': vm.interfaceController.hideSearchMask}")

main.top-content-home
  .default-container.home-header
    include ./parts/top-container.partial.jade
  .default-container(data-ng-click="vm.onSearchFocus()")
    pro-search-dropdown(data-mask-search="vm.interfaceController.hideSearchMask")
  .default-container
    include ./parts/branch-overview.partial.jade

  .default-container
    similar-experts-slider(data-consultations="vm.similarExperts" data-title="HOME.SIMILAR_EXPERTS_SLIDER_MESSAGE")

.card-slider
  card-slider.flex-row(data-cards="vm.expertCard" data-controlls="vm.controlls")
    
main.content-blog
  .default-container.advice-tiles
    .grid(pro-masonry="" data-grid-item=".grid-item")
      .grid-item.grid-item--long2
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
      .grid-item
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item.grid-item--width2
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
        
footer.footer
  pro-footer
