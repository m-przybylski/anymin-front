pro-top-navbar(logout-action="appController.logout")

main.top-content-home
  .default-container.home-header
    include ./parts/top-container.partial.jade
  .default-container
    pro-search-dropdown()
  .default-container
    include ./parts/branch-overview.partial.jade

  .default-container
    .single-container.slider-container
      .slider-control
        span.icon.icon-hands-32
        p(data-translate="HOME.SLIDER_1")
        p(data-translate="HOME.SLIDER_2")
        .switcher
          span.icon.icon-arrow-left-12(data-ng-click="vm.newsPrevSlide()")
          span.icon.icon-arrow-right-12(data-ng-click="vm.newsNextSlide()")
      .slider-slides(data-ng-style="leftOffset") 
        slider.flex-row(data-ng-transclude data-controlls="vm.newsControlls" data-move-slides="-1")
          .slides(data-ng-repeat="slide in vm.newsSlider" data-ng-swipe-left="nextSlide()" data-ng-swipe-right="prevSlide()")
            img(data-ng-src="{{slide.img}}")
            p {{ slide.title }}
            p.desc {{ slide.descriptions }}

    
.card-slider
  slider.flex-row(data-ng-transclude data-controlls="vm.controlls")
    pro-expert-card(data-ng-repeat="expert in vm.expertCard" data-ng-model="expert")
  
  .controlls
    .left-offset(data-ng-click="vm.prevSlide()")
      span.icon.icon-arrow-left-12
    
    .right-offset(data-ng-click="vm.nextSlide()")
      span.icon.icon-arrow-right-12
    
main.content-blog
  .default-container.advice-tiles
    .grid(pro-masonry="" data-grid-item=".grid-item")
      .grid-item.grid-item--long2
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
      .grid-item
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item.grid-item--width2
        pro-news-tile(data-ng-repeat="tile in vm.newsTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
      .grid-item
        pro-advice-tile(data-ng-repeat="tile in vm.adviceTile" data-ng-model="tile")
        
main.footer
  pro-footer
