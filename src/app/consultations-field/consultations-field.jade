.consultations-field
  pro-top-navbar()
  
  .consultations-top(style="background: url('/assets/images/test-bg.jpg') no-repeat top center")
    .field-search(data-model='vm.model' data-tag-click-action="vm.tagsClick")
      .default-container
        pro-search-dropdown
        
        .top-search-items
          h4(data-translate="HOME.FIELD.TOP_SEARCH")
          pro-tags-slider(data-tags="vm.tags" data-on-tag-click-action="vm.tagsAction")
          

  .card-slider
    slider.flex-row(data-ng-transclude data-controlls="vm.controlls")
      pro-expert-card(data-ng-repeat="expert in vm.expertCard" data-ng-model="expert")
    
    .controlls
      .left-offset(data-ng-click="vm.prevSlide()")
        span.icon.icon-arrow-left-12
      
      .right-offset(data-ng-click="vm.nextSlide()")
        span.icon.icon-arrow-right-12
      
    .default-container
      pro-expert-slider()

  pro-footer()
