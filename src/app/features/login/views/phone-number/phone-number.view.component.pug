.phone-number-view
  plat-login-background
    plat-login-content(
      contentHeightAnimation,
      titleText="LOGIN.TRUST_EXPERTS",
      tooltipText="LOGIN.TOOLTIP"
    )
      form(
        [id]="msisdnFormId",
        [formGroup]="msisdnForm",
        novalidate,
        (ngSubmit)="onFormSubmit(msisdnForm)"
      )
        .input-icon-container
          span.icon.icon-headphone
          .input-handler
            am-core-input-prefix(
              label="LOGIN.AREA_CODE",
              [value]="msisdnPrefix"
            )
            am-core-input-phone-number(
              label="LOGIN.ENTER_NUMBER",
              placeholder="LOGIN.ENTER_NUMBER_PLACEHOLDER",
              [controlName]="msisdnControlName",
              [form]="msisdnForm",
              [isDisabled]="isRequestPending",
              [initialFocus]="isInputInitialFocused",
              [isRequired]="isInputRequired"
            )

        am-core-submit-button(
          titleText="LOGIN.NEXT",
          [formName]="msisdnFormId",
          [isLoading]="isRequestPending"
        )
