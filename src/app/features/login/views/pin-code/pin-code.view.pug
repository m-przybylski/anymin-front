.pin-code-view
  login-background
    login-content(
      titleText="LOGIN.PIN_CODE.TITLE",
      [msisdn]="msisdn"
    )
      form(
        [id]="pinCodeFormName",
        [formGroup]="pinCodeForm",
        novalidate,
        (ngSubmit)="onFormSubmit(pinCodeForm)"
      )

        .input-icon-container
          span.icon.icon-cellphone
          input-pin-code(
            label="LOGIN.PIN_CODE.ENTER_CODE.LABEL",
            placeholder="LOGIN.PIN_CODE.ENTER_CODE.PLACEHOLDER",
            [form]="pinCodeForm",
            [controlName]="pinCodeControlName",
            [isDisabled]="isRequestPending",
            [initialFocus]="isInputInitialFocused"
          )

        div(*ngIf="!isUserRegisteredWithoutPassword")
          input-checkbox(
            label="LOGIN.PIN_CODE.ACCEPT_TERMS",
            errorTextKey="LOGIN.PIN_CODE.ACCEPT_TERMS.VALIDATION_MESSAGE",
            [isRequired]="true",
            [form]="pinCodeForm",
            [controlName]="termsOfServiceControlName",
            [isDisabled]="isRequestPending"
          )

        div(*ngIf="!isUserRegisteredWithoutPassword")
          input-checkbox(
            label="LOGIN.PIN_CODE.ACCEPT_MARKETING",
            errorTextKey="LOGIN.PIN_CODE.ACCEPT_MARKETING.VALIDATION_MESSAGE",
            [isRequired]="true",
            [form]="pinCodeForm",
            [controlName]="termsOfMarketingControlName",
            [isDisabled]="isRequestPending"
          )

        submit-button(
          titleText="LOGIN.PIN_CODE.SUBMIT_BUTTON",
          [formName]="pinCodeFormName",
          [isLoading]="isRequestPending"
        )

      .send-again
        p([translate]="'LOGIN.PIN_CODE.SMS_CODE'")
        p(
          *ngIf="isCountingDown()",
          [translate]="'LOGIN.PIN_CODE.SEND_AGAIN.COUNTER'",
          [translateParams]="{seconds: timeLeft}"
        )
        a.send-again__link(
          *ngIf="!isCountingDown()",
          (click)="resendPinCode()",
          [translate]="'LOGIN.PIN_CODE.SEND_AGAIN'"
        )
