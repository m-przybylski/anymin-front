.availability([ngSwitch]="expertAvailable$ | async")
  ng-container(*ngSwitchCase="expertPresenceStatuses.Available")
    span.icon.icon-available
    span(*ngIf="isTextVisible") {{ 'EXPERT_VIEW.STATUS.AVAILABLE' | translate }}

  ng-container(*ngSwitchCase="expertPresenceStatuses.Busy")
    span.icon.icon-busy
    span(*ngIf="isTextVisible") {{ 'EXPERT_VIEW.STATUS.BUSY' | translate }}

  ng-container(*ngSwitchCase="expertPresenceStatuses.Unavailable")
    span.icon.icon-offline
    span(*ngIf="isTextVisible") {{ 'EXPERT_VIEW.STATUS.UNAVAILABLE' | translate }}
