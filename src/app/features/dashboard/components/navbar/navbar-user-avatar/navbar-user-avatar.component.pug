.navbar-user-avatar((click)="toggleMenuVisibility()")
  plat-user-avatar(
    [avatarSize]="avatarSize",
    [avatarToken]="avatarToken"
  )
  div(*ngIf="userType === userTypeEnum.EXPERT")
    .icon-background
    span.navbar-user-avatar__icon.icon.icon-available(*ngIf="isUserVisible")
    span.navbar-user-avatar__icon.icon.icon-offline(*ngIf="!isUserVisible")

  ng-content
