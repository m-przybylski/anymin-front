plat-modal-component.payout-method(
[modalTrTitleHeader]="'DASHBOARD.PAYMENTS.PAYOUTS_MODAL.TITLE'",
[modalContainerClass]="modalWidth"
)

  .options-container(contentHeightAnimation)
    .options-container__item(
    [class.selected]="selectedPayoutMethodType === payoutMethods.BANK_ACCOUNT",
    (click)="selectPayoutMethod(payoutMethods.BANK_ACCOUNT)"
    )
      span {{ 'DASHBOARD.PAYMENTS.PAYOUTS_MODAL.BANK_ACCOUNT.TITLE' | translate }}

    .options-container__item(
    [class.selected]="selectedPayoutMethodType === payoutMethods.PAYPAL",
    (click)="selectPayoutMethod(payoutMethods.PAYPAL)"
    )
      span {{ 'DASHBOARD.PAYMENTS.PAYOUTS_MODAL.PAYPAL.TITLE' | translate }}

  ng-container(*ngIf="selectedPayoutMethodType === payoutMethods.BANK_ACCOUNT")
    bank-account([getPayoutMethod]="getPayoutMethod")

  ng-container(*ngIf="selectedPayoutMethodType === payoutMethods.PAYPAL")
    paypal-account([getPayoutMethod]="getPayoutMethod")
