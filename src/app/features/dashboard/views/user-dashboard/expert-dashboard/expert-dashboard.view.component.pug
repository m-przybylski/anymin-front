.expert-dashboard-layout
  .container
    plat-dashboard-profile-header(
      [avatarToken]='avatarToken',
      [name]='name',
      [links]='links',
      [description]='description',
      [isOwnProfile]='isOwnProfile',
      [expertId]='expertId',
      [isLogged]='isLogged',
      [attachments]='expertDocuments',
      (editProfile)='editProfile()',
      (openGallery)='onOpenGallery()'
    )
.container
  h2.header-text {{'EXPERT_DASHBOARD.CONSULTATIONS_CAPTION' | translate}}
  plat-expert-dashboard-consultations(
    [consultations]='consultations',
    [isOwnProfile]='isOwnProfile',
    [expertId]="expertId",
    [isCompany]="isCompany",
    [isLogged]="isLogged",
    [accountId]="expertId",
    (addConsultation)='addConsultation()',
    (openConsultationDetails) = 'openConsultationDetail($event, expertId)'
  )
