.setting-option
  .setting-option__left
    .description-container
      .description-container__title-container
        h3.description-container__title
          | {{ title | translate }}
          span.description-container__optional-text {{ titleOptionalText | translate }}
        plat-tooltip(
        *ngIf="tooltipTrText",
        [tooltipText]="tooltipTrText | translate"
        )

      span.description-container__description {{ description | translate }}

  .setting-option__right
    ng-content
