.settings
  .settings__header
    span {{ 'DASHBOARD.SETTINGS.TITLE' | translate }}

  .settings__container(*ngIf="session$ | async as session; else loader")
    ul.settings-list
      li.settings-list__item
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.ANONYMITY.TITLE'",
          [description]="'DASHBOARD.SETTINGS.ANONYMITY.DESCRIPTION'",
          [tooltipTrText]="'DASHBOARD.SETTINGS.CHANGE_NUMBER_TITLE.TOOLTIP'")
          plat-change-anonymity
      li.settings-list__item(*ngIf="session.account.msisdn")
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.NOTIFICATIONS.TITLE'",
          [description]="'DASHBOARD.SETTINGS.NOTIFICATIONS.DESCRIPTION'",
          [tooltipTrText]="'DASHBOARD.SETTINGS.NOTIFICATIONS.TOOLTIP'")
          plat-change-notifications
      li.settings-list__item
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.CHANGE_NUMBER_TITLE'",
          [description]="session.account.msisdn")
          button.button-tablet(plat-stroked-button, (click)="openChangeNumberModal()") {{ 'DASHBOARD.SETTINGS.BUTTON.CHANGE' | translate }}
          button.button-mobile(plat-icon-button)
            span(plat-icon iconClass='stroke-edit', (click)="openChangeNumberModal()")
      li.settings-list__item
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.CHANGE_PASSWORD_TITLE'",
          [description]="'DASHBOARD.SETTINGS.CHANGE_PASSWORD_DESCRIPTION'")
          button.button-tablet(plat-stroked-button, (click)="openChangePasswordModal()") {{ 'DASHBOARD.SETTINGS.BUTTON.CHANGE' | translate }}
          button.button-mobile(plat-icon-button)
            span(plat-icon iconClass='stroke-edit', (click)="openChangePasswordModal()")
      li.settings-list__item
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.CHANGE_EMAIL_TITLE'",
          [titleOptionalText]="session.account.unverifiedEmail ? 'DASHBOARD.SETTINGS.CHANGE_EMAIL_TITLE.UNVERIFIED' : ''",
          [description]="session.account.unverifiedEmail|| session.account.email")
          button.button-tablet(plat-stroked-button, (click)="openChangeEmailModal()") {{ 'DASHBOARD.SETTINGS.BUTTON.CHANGE' | translate }}
          button.button-mobile(plat-icon-button)
            span(plat-icon iconClass='stroke-edit', (click)="openChangeEmailModal()")
      li.settings-list__item
        plat-setting-option(
          [title]="'DASHBOARD.SETTINGS.CHANGE_SESSION_TITLE'",
          [description]="'DASHBOARD.SETTINGS.CHANGE_SESSION_DESCRIPTION'")
          button.button-tablet(plat-stroked-button, (click)="openManageSessionsModal()") {{ 'DASHBOARD.SETTINGS.BUTTON.CHECK' | translate }}
          button.button-mobile(plat-icon-button)
            span(plat-icon iconClass='stroke-edit', (click)="openManageSessionsModal()")

  ng-template(#loader)
    ul.settings-list-loader
      li.settings-list-loader__item
        plat-list-item-loader
      li.settings-list-loader__item
        plat-list-item-loader
      li.settings-list-loader__item
        plat-list-item-loader
      li.settings-list-loader__item
        plat-list-item-loader
      li.settings-list-loader__item
        plat-list-item-loader
