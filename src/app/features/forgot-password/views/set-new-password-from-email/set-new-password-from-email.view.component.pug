.set-new-password-from-email
  plat-login-background
    plat-login-content(
      contentHeightAnimation,
      titleText="FORGOT_PASSWORD.SET_PASSWORD.TITLE",
      subTitle="ACCOUNT.SET_PASSWORD.SUBTITLE"
    )
      form(
        [id]="setPasswordFormId",
        [formGroup]="setPasswordForm",
        novalidate,
        (ngSubmit)="onFormSubmit(setPasswordForm)")

        input(
         type="text",
         [value]="login",
         hidden
        )

        .input-icon-container
          span.icon.icon-lock-closed
          am-core-input-set-password(
            label="LOGIN.PASSWORD.ENTER_PASSWORD.LABEL",
            placeholder="LOGIN.PASSWORD.ENTER_PASSWORD.PLACEHOLDER",
            [form]="setPasswordForm",
            [controlName]="passwordControlName",
            [isDisabled]="isRequestPending",
            [initialFocus]="isInputInitialFocused"
          )

        am-core-submit-button(
          titleText="FORGOT_PASSWORD.SET_PASSWORD.SUBMIT_BUTTON",
          [formName]="setPasswordFormId",
          [isLoading]="isRequestPending"
        )
