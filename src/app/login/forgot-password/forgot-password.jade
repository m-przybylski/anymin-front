
.emailVeryfication(data-ng-show="vm.account.recoveryMethod==='EMAIL'")
  .email-sent

    h5(data-translate="LOGIN.FORGOT_PASSWORD.EMAIL_HAD_BEEN_SENT")
    button.pro-btn.btn-main.btn-medium(data-ui-sref="app.login.account" data-translate="LOGIN.NEXT")
    h6
      a(data-ng-click="vm.forceSmsRecovery()") Straciłem dostęp do emaila wyślij kod smsem

.smsVeryfication(data-ng-show="vm.account.recoveryMethod==='SMS'")

  .smsVeryfication
    form.pro-input-form(name="smsCodeForm" data-ng-submit="smsCodeForm.$valid && vm.submitSmsVerificationCode()" novalidate)
      pro-input(data-label="{{ 'REGISTER.SERVICE_CODE' | translate }}"
      placeholder="{{ 'REGISTER.SERVICE_CODE_PLACEHOLDER' | translate }}"
      data-pro-model="vm.smsCode"
      data-maxlength="4"
      data-type="tel"
      data-name="smsCode"
      data-ng-pattern="vm.patternSms"
      data-ng-class="{'invalid':smsCodeForm.smsCode.$invalid && (smsCodeForm.smsCode.$dirty || smsCodeForm.$submitted || vm.serverError)}"
      required auto-focus only-digits)
      .input-error-messages
        .error.left(data-ng-show="smsCodeForm.$submitted && smsCodeForm.$invalid || vm.serverError" data-translate="REGISTER.CODE_REQUIRED")

      .btn-handler
        button.pro-btn.btn-main.btn-medium(type="submit" data-translate="LOGIN.NEXT")
        button.pro-btn.btn-light.btn-medium(data-ui-sref="app.login.account" data-translate="LOGIN.BACK")



