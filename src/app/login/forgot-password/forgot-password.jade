
.email-veryfication(data-ng-show="vm.account.recoveryMethod==='EMAIL'")
  .email-sent

    p(data-translate="LOGIN.FORGOT_PASSWORD.EMAIL_HAD_BEEN_SENT")
    button.btn.btn-default(data-ui-sref="app.login.account" data-translate="LOGIN.NEXT")
    a(data-ng-click="vm.forceSmsRecovery()" data-translate="LOGIN.FORGOT_PASSWORD.LOST_EMAIL_SEND_SMS")

.smsVeryfication(data-ng-show="vm.account.recoveryMethod==='SMS'")

  .smsVeryfication
    form.pro-input-form(name="smsCodeForm" data-ng-submit="smsCodeForm.$valid && vm.submitSmsVerificationCode()" novalidate)
      pro-input(data-label="{{ 'REGISTER.SERVICE_CODE' | translate }}"
      placeholder="{{ 'REGISTER.SERVICE_CODE_PLACEHOLDER' | translate }}"
      data-ng-model="vm.smsCode"
      data-maxlength="4"
      data-type="tel"
      data-id="smsCode"
      data-ng-pattern="vm.smsCodePattern"
      data-ng-class="{'invalid':smsCodeForm.smsCode.$invalid && (smsCodeForm.smsCode.$dirty || smsCodeForm.$submitted || vm.serverError)}"
      required auto-focus only-digits)
      .input-error-messages
        .error.left(data-ng-show="smsCodeForm.$submitted && smsCodeForm.$invalid || vm.serverError" data-translate="REGISTER.CODE_REQUIRED")

      .btn-handler.flex-row.login-handler
        button.btn.btn-default(type="submit" data-translate="LOGIN.NEXT")
        button.btn.btn-primary(data-ui-sref="app.login.account" data-translate="LOGIN.BACK")
