.sms-code
    form.pro-input-form(name="smsCodeForm" data-ng-submit="smsCodeForm.$valid && vm.getSmsCodeStatus()" novalidate)
        pro-input(data-label="{{ 'REGISTER.SERVICE_CODE' | translate }}"
        placeholder="{{ 'REGISTER.SERVICE_CODE_PLACEHOLDER' | translate }}"
        data-pro-model="vm.registrationSteps.smsCode"
        data-maxlength="4"
        data-type="tel"
        data-name="smsCode"
        data-ng-pattern="vm.patternSms"
        data-ng-class="{'invalid':smsCodeForm.smsCode.$invalid && (smsCodeForm.smsCode.$dirty || smsCodeForm.$submitted) || vm.serverError}"
        required auto-focus only-digits)
        .input-error-messages
            .error.left(data-ng-show="smsCodeForm.$submitted && smsCodeForm.smsCode.$invalid ||vm.serverError" data-translate="REGISTER.CODE_REQUIRED")

        pro-checkbox(id="acceptRules"
        data-pro-model="vm.rulesAccepted"
        data-label="{{'LOGIN.ACCEPT_RULES' | translate}}"
        data-name="acceptRules"
        data-ng-class="{'invalid': !vm.rulesAccepted && smsCodeForm.$submitted}"
        required)

        .checkbox-error-messages
            .error.left(data-translate="REGISTER.VALID_CHECKBOX" data-ng-show="!vm.rulesAccepted && smsCodeForm.$submitted")
        .btn-handler
            button.pro-btn.btn-main.btn-medium(type="submit" data-translate="LOGIN.NEXT")
            button.pro-btn.btn-light.btn-medium(data-ui-sref="app.login.account" data-translate="LOGIN.BACK")
