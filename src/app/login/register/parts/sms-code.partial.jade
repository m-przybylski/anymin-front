.sms-code
  form.pro-input-form(name="smsCodeForm" data-ng-submit="smsCodeForm.$valid && vm.getSmsCodeStatus()" novalidate)
    pro-input(data-label="{{ 'REGISTER.SERVICE_CODE' | translate }}"
    placeholder="{{ 'REGISTER.SERVICE_CODE_PLACEHOLDER' | translate }}"
    data-ng-model="vm.registrationSteps.smsCode"
    data-maxlength="4"
    data-type="tel"
    data-name="smsCode"
    data-ng-pattern="vm.patternSms"
    data-ng-change="vm.verifyCode()"
    data-ng-class="{'invalid':smsCodeForm.smsCode.$invalid && (smsCodeForm.smsCode.$dirty || smsCodeForm.$submitted) || vm.serverError, 'valid': vm.correctCode}"
    required auto-focus only-digits)
  .input-error-messages
    .error.left(data-ng-show="smsCodeForm.$submitted && smsCodeForm.smsCode.$invalid || vm.serverError" data-translate="REGISTER.CODE_REQUIRED")

  .btn-handle.btn-handler.flex-row.login-handler
    button.pro-button.rectangle.default(type="submit" data-translate="LOGIN.NEXT")
    button.pro-button.rectangle.primary(data-ui-sref="app.login.account" data-translate="LOGIN.BACK")
