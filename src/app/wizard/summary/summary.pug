.summary
  profile-header-edit(
    data-profile-details="vm.wizardProfileData"
    data-profile-type="vm.isExpert"
    data-documents="vm.files"
    data-on-delete="vm.onMainProfileDelete"
  )
  .container(data-ng-if="vm.isConsultation")
    single-consultation-edit(data-ng-repeat="service in vm.services" data-service="service")

  .container
    .add-new-consultation(data-ng-show="!vm.isConsultation")
      p(data-translate="WIZARD.SUMMARY.ADD.TITLE")
      a.btn.btn-default(data-translate="WIZARD.SUMMARY.ADD.BUTTON" data-ui-sref="app.wizard.consultation")

    .add-another-consultation(data-ng-show="vm.isConsultation")
      p(data-translate="WIZARD.SUMMARY.ADD.ANOTHER.TITLE")

      .btn-handler
        a.btn.btn-primary(data-translate="WIZARD.SUMMARY.ADD.ANOTHER.BUTTON" data-ui-sref="app.wizard.consultation")
        a.btn.btn-default(data-translate="WIZARD.SUMMARY.ADD.ANOTHER.BUTTON.SAVE" data-ng-click="vm.saveWizard()")
