.wizard-expert
  wizard-handler(data-on-step-change="vm.saveSteps")
    wizard-step.step(
    data-title="We recommend to type a real name*"
    data-check-is-step-valid="vm.checkNameInput"
    )

      pro-input(
        data-ng-model="vm.currentWizardState.expertDetailsOption.name"
        required
        auto-focus
      )

      .input-sign-counter
        span.label(data-ng-show="!vm.inputText") {{ vm.inputText }}
        span.label {{ vm.inputText.length || 0 }}
        span.label  / {{ vm.inputMaxLength }} characters

    wizard-step.step(
    data-title="We recommend to type a real name*"
    data-check-is-step-valid="vm.checkNameInput"
    )

      pro-input(
      data-ng-model="vm.expertDetailsOption.name"
      required
      auto-focus
      )

      .input-sign-counter
        span.label(data-ng-show="!vm.inputText") {{ vm.inputText }}
        span.label {{ vm.inputText.length || 0 }}
        span.label  / {{ vm.inputMaxLength }} characters


    wizard-step.step(
    data-title="We recommend to type a real name*"
    data-check-is-step-valid="vm.checkNameInput"
    )

      pro-input(
      data-ng-model="vm.nameModel"
      required
      auto-focus
      )

      .input-sign-counter
        span.label(data-ng-show="!vm.inputText") {{ vm.inputText }}
        span.label {{ vm.inputText.length || 0 }}
        span.label  / {{ vm.inputMaxLength }} characters


