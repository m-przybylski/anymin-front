.wizard-expert
  wizard-handler(data-on-step-change="vm.saveSteps")
    wizard-step.step(
    data-title="WIZARD.STEP.EXPERT.NAME.TITLE"
    data-tooltip-text="WIZARD.STEP.EXPERT.NAME.TOOLTIP"
    data-check-is-step-valid="vm.checkIsNameInputValid"
    data-on-go-back="vm.onGoBack"
    )
      input-primary(
      data-ng-model="vm.nameModel"
      data-ng-pattern="vm.patternName"
      data-id="firstName"
      data-is-valid="vm.checkIsNameInputValid()"
      data-validation-text="WIZARD.EXPERT.NAME_INPUT_VALIDATION"
      data-max-length="150"
      data-is-submitted="vm.isSubmitted"
      )

    wizard-step.step(
    data-title="WIZARD.STEP.EXPERT.PHOTO.TITLE"
    data-tooltip-text="WIZARD.STEP.EXPERT.PHOTO.TOOLTIP"
    data-check-is-step-valid="vm.checkIsAvatarValid"
    )
      wizard-avatar(
      data-avatar-token="vm.avatarModel"
      data-is-valid="vm.checkIsAvatarValid()"
      data-validation-text="WIZARD.EXPERT.AVATAR_INPUT_VALIDATION"
      data-is-submitted="vm.isSubmitted")

    wizard-step.step(
    data-title="WIZARD.STEP.EXPERT.LANGUAGE.TITLE"
    data-additional-text="WIZARD.STEP.EXPERT.LANGUAGE.HINT"
    data-tooltip-text="WIZARD.STEP.EXPERT.LANGUAGE.TOOLTIP"
    data-check-is-step-valid="vm.checkIsLanguagesValid"
    )
      input-dropdown-tag(
        data-dictionary="vm.languagesList"
        data-selected-items-value="vm.languagesModel"
        data-is-valid="vm.checkIsLanguagesValid()"
        data-is-submitted="vm.isSubmitted"
        data-validation-text="WIZARD.EXPERT.LANGUAGES_INPUT_VALIDATION"
      )

    wizard-step.step(
      data-title="WIZARD.STEP.EXPERT.DESCRIPTION.TITLE"
      data-tooltip-text="WIZARD.STEP.EXPERT.DESCRIPTION.TOOLTIP"
      data-check-is-step-valid="vm.checkIsProfileDescriptionValid"
    )
      textarea-primary(
        data-ng-model="vm.descriptionModel"
        data-id="desctName"
        data-is-valid="vm.checkIsProfileDescriptionValid()"
        data-validation-text="WIZARD.EXPERT.TEXTAREA_INPUT_VALIDATION"
        data-max-length="600"
        data-is-submitted="vm.isSubmitted"
      )

    wizard-step.step(
    data-title="WIZARD.STEP.EXPERT.FILES.TITLE"
    data-tooltip-text="WIZARD.STEP.EXPERT.FILES.TOOLTIP"
    )
      wizard-uploader(data-token-list="vm.filesModel")

    wizard-step.step(
    data-title="WIZARD.STEP.EXPERT.LINKS.TITLE"
    data-tooltip-text="WIZARD.STEP.EXPERT.LINKS.TOOLTIP"
    data-on-go-to-next="vm.goToSummary"
    )

      wizard-links(data-selected-links="vm.linksModel")

    p(data-ng-show='!vm.isFormValid() && vm.isSubmitted') {{ 'WIZARD.EXPERT.VALIDATE_FORM' | translate }}
