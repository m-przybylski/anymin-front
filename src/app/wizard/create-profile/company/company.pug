.wizard-expert
  wizard-handler(data-on-step-change="vm.saveSteps")
    wizard-step.step(
    data-title="WIZARD.STEP.COMPANY.NAME.TITLE"
    data-tooltip-text="WIZARD.STEP.COMPANY.NAME.TOOLTIP"
    data-check-is-step-valid="vm.checkIsNameInputValid"
    data-on-go-back="vm.onGoBack"
    )
      input-primary(
      data-ng-model="vm.nameModel"
      data-ng-pattern="vm.patternName"
      data-id="firstName"
      data-is-valid="vm.checkIsNameInputValid()"
      data-validation-text="WIZARD.COMPANY.NAME_INPUT_VALIDATION"
      data-max-length="150"
      data-is-submitted="vm.isSubmitted"
      )

    wizard-step.step(
    data-title="WIZARD.STEP.COMPANY.PHOTO.TITLE"
    data-tooltip-text="WIZARD.STEP.COMPANY.PHOTO.TOOLTIP"
    data-check-is-step-valid="vm.checkIsLogoValid"
    )
      wizard-avatar(
      data-avatar-token="vm.logoModel"
      data-is-valid="vm.checkIsLogoValid()"
      data-validation-text="WIZARD.COMPANY.AVATAR_INPUT_VALIDATION"
      data-is-submitted="vm.isSubmitted")

    wizard-step.step(
    data-title="WIZARD.STEP.COMPANY.DESCRIPTION.TITLE"
    data-tooltip-text="WIZARD.STEP.COMPANY.DESCRIPTION.TOOLTIP"
    data-check-is-step-valid="vm.checkIsProfileDescriptionValid"
    )
      textarea-primary(
      data-ng-model="vm.descriptionModel"
      data-id="desctName"
      data-max-length="600"
      data-is-valid="vm.checkIsProfileDescriptionValid()"
      data-validation-text="WIZARD.COMPANY.TEXTAREA_INPUT_VALIDATION"
      data-is-submitted="vm.isSubmitted"
      )

    wizard-step.step(
    data-title="WIZARD.STEP.COMPANY.FILES.TITLE"
    data-tooltip-text="WIZARD.STEP.COMPANY.FILES.TOOLTIP"
    )
      wizard-uploader(data-token-list="vm.filesModel")

    wizard-step.step(
    data-title="WIZARD.STEP.COMPANY.LINKS.TITLE"
    data-tooltip-text="WIZARD.STEP.COMPANY.LINKS.TOOLTIP"
    data-on-go-to-next="vm.goToSummary"
    )

      wizard-links(data-selected-links="vm.linksModel")

    p(data-ng-show='!vm.isFormValid() && vm.isSubmitted') {{ 'WIZARD.COMPANY.VALIDATE_FORM' | translate }}
