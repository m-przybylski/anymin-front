.consultation-price
  .input-container
    am-core-input-price(
      [label]="labelWithoutCommission",
      [isRequired]="isRequired",
      [form]="form",
      [controlName]="withoutCommissionControlName",
      [isDisabled]="isDisabled",
      [isInputMedium]="true",
      [isZeroValueAllowed]="true",
      [onInputChange]="calculateGrossPrice",
      [minValidValue]="minValidPriceWithoutCommission",
      [maxValidValue]="maxValidPriceWithoutCommission",
      [minValueErrorTrKey]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.PRICE_ERROR_TO_LOW'",
      [maxValueErrorTrKey]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.PRICE_ERROR_TO_MUCH'"
    )

    .currency.xsm-only
      .currency__title
        span([translate]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.CURRENCY_LABEL'")
      .currency__value
        span([translate]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.CURRENCY'")

  .input-container
    am-core-input-price(
      [label]="labelGross",
      [isRequired]="isRequired",
      [form]="form",
      [controlName]="grossControlName",
      [isDisabled]="isDisabled",
      [isInputMedium]="true",
      [isZeroValueAllowed]="true",
      [onInputChange]="calculatePriceWithoutCommission",
      [minValidValue]="grossMinValidPrice",
      [maxValidValue]="grossMaxValidPrice",
      [minValueErrorTrKey]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.PRICE_ERROR_TO_LOW'",
      [maxValueErrorTrKey]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.PRICE_ERROR_TO_MUCH'"
    )

    .currency
      .currency__title
        span([translate]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.CURRENCY_LABEL'")
      .currency__value
        span([translate]="'CREATE_EXPERT_CONSULTATION.PRICE_SECTION.CURRENCY'")
