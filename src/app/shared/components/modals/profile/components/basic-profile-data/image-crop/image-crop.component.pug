plat-modal-component(
  [modalTrTitleHeader]="'EDIT_PROFILE.IMAGE_CROP.TITLE'",
  [modalContainerClass]="modalClass",
  [isCloseButtonVisible]="false"
  )
  .image-crop
    .image-crop__container(#imageCroppContainer)
      #visual-source
      plat-preloader-container([isLoading]="isPending", [contentSizeClass]="preloaderType")
      p.hint {{ 'EDIT_PROFILE.CONTENT.CREATE_EXPERT_PROFILE.AVATAR.CROP' | translate }}

    .modal-component__action.modal-component__action--crop
      input(type="range", min="0" max="1.5" step="0.0001", #ref, (change)="onInputRangeChange($event)")

      div
        a.button(plat-stroked-button, (click)="onModalClose()", [translate]="'EDIT_PROFILE.IMAGE_CROP.BUTTON.CANCEL'")

        am-core-submit-button(
          (click)="onImgUrlSubmit()",
          [titleText]="'EDIT_PROFILE.IMAGE_CROP.BUTTON.SAVE'",
          [isDisabled]="isPending",
          [isButtonSmall]="true"
        )
