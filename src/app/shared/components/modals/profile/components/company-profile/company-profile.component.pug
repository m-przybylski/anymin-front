form.form.form--create-organization(
  [formGroup]="profileForm",
  id="createOrganizationForm",
  contentHeightAnimation,
  novalidate
)
  .modal-form__row--small(*ngIf="hasProfileConsultationsAsExpert")
    plat-warning-information(
      [warningText]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.HAS_GOT_CONSULTATION.ALERT'",
    )

  .modal-form__row.modal-form__row--small
    header.modal-component__content__header
      span {{'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.ADD_BASIC_DATA.TITLE' | translate }}
        plat-tooltip(
        [tooltipText]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.TOOLTIP.DESCRIPTION'",
        [tooltipType]="tooltipType"
        )

  .modal-form__row
    plat-basic-profile-data(
      [isRequired]="true",
      [isValidated]="isValidated",
      [formControlName]="basicProfileDataControlName",
      [isDisabled]="isInputDisabled",
      [isOrganizationAvatar]="true",
      [inputTextLabel]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.INPUT.INPUT_NAME.LABEL'",
      [inputTextPlaceholder]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.INPUT.INPUT_NAME.PLACEHOLDER'"
    )

  .modal-form__row.modal-form__row--small
    header.modal-component__content__header
      span {{ 'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.DESCRIPTION.HEADER.TITLE' | translate }}

    am-core-textarea-primary(
      [maxLength]="profileDescriptionMaxLength",
      [minLength]="profileDescriptionMinLength",
      [placeholder]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.DESCRIPTION.PLACEHOLDER'",
      [form]="profileForm",
      [controlName]="descriptionControlName",
      [errorTextKey]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.DESCRIPTION.ERROR'",
      [label]="'DASHBOARD.CREATE_PROFILE.CREATE_ORGANIZATION_PROFILE.DESCRIPTION.LABEL'",
      [isRequired]="true",
      [isDisabled]="isInputDisabled"
      )

  .modal-form__row.modal-form__row--small
    plat-file-uploader(
      [maxFileSize]="maxValidFileSize",
      [maxFilesCount]="maxValidFilesCount",
      [fileCategory]="fileCategory",
      [profileDocuments]="profileDocumentsList",
      (uploadingFile)="onUploadingFile($event)",
      (fileTokensList)="onUploadFile($event)",
      [isDisabled]="isInputDisabled"
    )
  .modal-form__row.modal-form__row--small
    plat-profile-links(
      [formControlName]="linksControlName",
      [isDisabled]="isInputDisabled"
    )
