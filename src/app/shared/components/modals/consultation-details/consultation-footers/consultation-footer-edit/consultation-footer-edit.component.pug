plat-consultation-footer
  //left part of the screen
  .consultation-footer__left-price
    plat-consultation-footer-price([grossPrice]='grossPrice')
  //middle part of the screen
  .consultation-footer__left-text
    plat-consultation-footer-organization-edit-freelance(
      *ngIf='isFreelance else organization',
      [expertPrice]='netFreelancerPrice',
      [grossPrice]='grossPrice',
      [organizationPrice]='organizationPrice')
    ng-template(#organization)
      plat-consultation-footer-freelance(
        [price]='netPrice',
        [grossPrice]='grossPrice')
  //right part of the screen
  .consultation-footer__right
    a.consultation-footer__right-button((click)='onEdit()', plat-stroked-button color='secondary') {{"CONSULTATION_DETAILS.FOOTER.EDIT" | translate}}
    a.consultation-footer__right-button((click)='onShare()', plat-button color='primary') {{"CONSULTATION_DETAILS.FOOTER.SHARE" | translate}}
  //right panel on the screen on mobile
  .consultation-footer__right--mobile
    a.consultation-footer__right-button((click)='onEdit()', plat-icon-button color='secondary')
      span(plat-icon iconClass='stroke-edit')
    a.consultation-footer__right-button((click)='onShare()', plat-flat-fab color='primary')
      span(plat-icon iconClass='share')
