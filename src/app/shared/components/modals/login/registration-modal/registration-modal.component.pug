plat-modal-component(
[modalTrTitleHeader]="modalHeaderTranslate",
[modalContainerClass]="modalContainerClass",
)
  .register-modal-componenet([ngClass]="{'register-modal-componenet--payment-card-step': isPaymentCardStep, 'register-modal-componenet--promo-code-step': isPromoCodeStep}")
    plat-stepper(
    #stepper='platStepper'
    )
      plat-step
        .register-modal-componenet__step.register-modal-componenet__step--registration
          plat-registration-form((onLoginLinkClick)="onLoginClick()", [isOpenInModal]="true")

      plat-step
        .register-modal-componenet__step.register-modal-componenet__step--login
          plat-login-form((onRegistrationLinkClick)="onRegistrationClick()", (onResetPasswordClick)="closeModal()", [isOpenInModal]="true")

      plat-step
        .register-modal-componenet__step.register-modal-componenet__step--payment-card
          plat-add-payment-card-form([isOpenInModal]="true", (promoCodeLinkClick)="goToPromoCodeStep()", (headerTitle)="changeModalTitle($event)")

      plat-step
        .register-modal-componenet__step.register-modal-componenet__step--promo-code
          .payment-promo-code
            plat-promo-code-form((paymentCardLinkClick)="goToAddPaymentCardStep()", [isOpenInModal]="true")
