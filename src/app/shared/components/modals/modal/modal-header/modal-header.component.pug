.modal-component__header
  .modal-component__header__nav.modal-component__header__nav--back
    a.button.button--back((click)="onBackClick()", *ngIf="isBackwardVisible")
      span.icon.icon-backward

  .modal-component__header__title
    p {{ titleTrHeader | translate }}

  .modal-component__header__nav.modal-component__header__nav--close
    a.button.button--close((click)="onModalClose()", *ngIf="isCloseButtonVisible")
      span.icon.icon-clear
