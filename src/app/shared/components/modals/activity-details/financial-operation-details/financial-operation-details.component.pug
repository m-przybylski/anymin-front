.fiancial-details.activity-details
  .activity-section
    ul
      li.basic-data
        span.basic-data__title {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.ID_NUMBER' | translate }}
        span.basic-data__value {{ id | uuidTrimmer}}
      li.basic-data
        span.basic-data__title {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.DATE' | translate }}
        span.basic-data__value {{ date | date:'d.M.yyyy' }}, {{ date | date:'H:mm' }}
      li.basic-data
        span.basic-data__title {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.PAYOUT_METHOD' | translate }}
        span.basic-data__value
          span {{ payoutMethodTrKey | translate }}

  .activity-section.activity-section--financial
    .basic-data.basic-data--financial
      span.basic-data__title {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.PAYOUT_AMOUNT' | translate }}
      span.basic-data__value {{ payoutAmount | currency: payoutCurrency:'symbol-narrow' }}

  .activity-section
    .basic-data
      span.basic-data__title {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.ADDITIONAL_OPTIONS' | translate }}
      // TODO implement functionality
      a.basic-data__value {{ 'ACTIVITY_DETAILS.DETAIL_TITLE.DOWNLOAD_INVOICE' | translate }}
