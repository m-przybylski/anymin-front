.basic-profile-data
  .basic-profile-data__content
    .crop-photo
      app-avatar-uploader([avatarUrl]="imageAvatar")

    am-core-input-text(
      [isDisabled]="false",
      [label]="'EDIT_PROFILE.INPUT.INPUT_NAME.LABEL'",
      [errorTextKey]="'FEATURE.PAYMENTS.CHOOSE_BANK.NAME_INPUT.ERROR'",
      [form]="formGroup",
      [minLength]="profileNameMinlength",
      [maxLength]="profileNameMaxlength",
      [controlName]="controlName",
      [inputValue]="ngModel",
      [isRequired]="isRequired"
    )
