.client-favourites-page
  .container
    .client-credits
      span(data-ng-bind-html="vm.balance | money")
      a.btn.btn-primary(data-translate="DASHBOARD.CLIENT.RECHARGE" data-ui-sref="app.dashboard.charge-account")
  .client-favourite-content
    .container(data-ng-if="(!vm.lastConsultations || vm.lastConsultations.length < 1) && (!vm.favouriteProfiles || vm.favouriteProfiles.length < 1)")
      client-no-favourite-experts()

    div(data-ng-if="vm.lastConsultations && vm.lastConsultations.length > 0 || vm.favouriteProfiles && vm.favouriteProfiles.length > 0")
      .container(data-ng-if="vm.lastConsultations && vm.lastConsultations.length > 0")
        header.entry-title
          span(data-translate="DASHBOARD.CLIENT.FAVOURITE_EXPERTS.RECENTLY_CONSULTED.TITLE")
        last-consultation-slider(consultations="vm.lastConsultations")

      .container(data-ng-if="vm.favouriteProfiles && vm.favouriteProfiles.length > 0")
        client-favourite-experts(data-favourite-experts="vm.favouriteProfiles")

      .container(data-ng-if="vm.similarExperts && vm.similarExperts.length > 0")
        header.entry-title
          span(data-translate="DASHBOARD.CLIENT.FAVOURITE_EXPERTS.RECOMENDED_CONSULTATION.TITLE")
        similar-experts-slider(consultations="vm.similarExperts")
