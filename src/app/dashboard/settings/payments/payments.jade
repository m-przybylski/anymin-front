.payments.payments-options
  .no-results-page(data-ng-hide="vm.isAnyPaymentMethod")
    .container
      .no-results-page-content
        img(data-ng-src="/assets/images/profitelo_icons/icon_payments.png")
        h2(data-translate="SETTINGS.PAYMENTS.NO_RESULTS.TITLE")
        a.btn.btn-default(data-ui-sref="app.dashboard.charge-account")
          | {{:: 'SETTINGS.PAYMENTS.NO_RESULTS.BUTTON' | translate}}
          span.icon.icon-upload-arrow-24

  .payments-method(data-ng-show="vm.isAnyPaymentMethod")
    .entry-title
      h2(data-translate="SETTINGS.PAYMENTS.PAYMENTS_METHOD.TITLE")
      a.btn.btn-default.btn-small(data-translate="SETTINGS.PAYMENTS.BUTTON.ADD" data-ng-click="vm.addNewPaymentMethod()")

    .radio-list.payments-method-list
      form
        .radio-list-item.profitelo-account
          .radio-text.radio
            div
              input(id="profitelo-payments-method" type="radio" name="payments-method")
              label.label

            label.text(for="profitelo-payments-method")
              | {{:: 'SETTINGS.PAYMENTS.PAYMENTS_METHOD.RADIO.PROFITELO_ACCOUNT' | translate }}
              span(data-ng-bind-html="vm.accountBalance | money ")

          .radio-action
            a.btn.btn-noborder.recharge-account( data-ui-sref="app.dashboard.charge-account"
              data-translate="SETTINGS.PAYMENTS.PAYMENTS_METHOD.RECHARGE_ACCOUNT.BUTTON")

        .radio-list-item(data-ng-repeat="card in vm.paymentCards")
          .radio-text.radio
            div
              input(id="card.name" type="radio" name="payments-method" data-ng-change="vm.onSelectPaymentMethod()")
              label.label
              img(data-ng-src="card.imageLink")

            label.text(for="card.name") {{ card.number }}

    .invoice-information
      .entry-title
        h2(data-translate="SETTINGS.PAYMENTS.INVOICE.TITLE")
        a.btn.btn-default.btn-small(data-translate="SETTINGS.PAYMENTS.BUTTON.EDIT" data-ng-click="vm.editInvoiceDetails()")

      .info-tab
        .info-tab-row
          .info-tab-label
            span(data-translate="SETTINGS.PAYMENTS.INVOICE.COMPANY_NAME")
          .info-tab-content {{ vm.companyName }}

        .info-tab-row
          .info-tab-label
            span(data-translate="SETTINGS.PAYMENTS.INVOICE.VAT_NUMBER")
          .info-tab-content {{ vm.vatNumber }}

        .info-tab-row
          .info-tab-label
            span(data-translate="SETTINGS.PAYMENTS.INVOICE.ADDRESS")
          .info-tab-content {{ vm.address }}
