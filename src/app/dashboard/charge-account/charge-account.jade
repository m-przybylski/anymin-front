.charge-account
  .top-charge-account
    .default-container
      .pro-top-title-row.title-row
        .current-balance
          h3(data-translate="DASHBOARD.CHARGE_ACCOUNT.YOUR_CURRENT_BALANCE")
          h4.current-balance-wallet {{ vm.clientBalance.amount / 100 }}zÅ‚
        .close-button
          a.pro-button.round.icon.primary(data-ui-sref="app.dashboard.start")
            span.icon.icon-close-16

      choose-amount-charge(data-title="DASHBOARD.CHARGE_ACCOUNT.CHOOSE_AMMOUNT_CHARGE" data-amounts="vm.amounts" data-amount-model="vm.amountModel")

      payment-method(data-title="DASHBOARD.CHARGE_ACCOUNT.PAYMENT_METHOD_TITLE"
                     data-payment-systems = "vm.paymentSystems"
                     data-payment-system-model = "vm.amountMethodModal.paymentSystemModel"
                     data-ng-if="vm.amountModel.amount.amount > 0 ||   vm.amountModel.cashAmount.amount > 0")

    .bottom-charge-account(data-ng-if="!!vm.amountMethodModal.paymentSystemModel && !!vm.amountMethodModal.paymentSystemModel.id")
      payu-payment-form(data-payments-links = "vm.paymentsLinks" data-amount-method-modal = "vm.amountMethodModal")