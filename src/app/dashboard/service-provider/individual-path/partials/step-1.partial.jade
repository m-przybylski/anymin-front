.step.step-done
  .title-step
    .title-order
      h3(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_TITLE")
      p(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_DESCRIPTION")
    div
      .step-description
        h5(data-translate="DASHBOARD.CREATE_PROFILE.STEP" data-translate-values="{step: 1, steps: {{ vm.amountOfSteps }} }")
        i.icon.icon-success-24
  .step-content
    .option.selected(data-ui-sref="app.dashboard.service-provider.individual-path")
      i.icon.icon-person-128
      h5(data-translate="DASHBOARD.MENU.STEP1_ONE_PERSON")
    .option(data-ui-sref="app.dashboard.service-provider.company-path")
      i.icon.icon-multiperson-128
      h5(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_MORE_PERSON")
