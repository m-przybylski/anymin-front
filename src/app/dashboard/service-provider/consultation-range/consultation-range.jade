pro-service-provider-profile(
data-name="vm.profile.name"
data-description="vm.profile.description"
data-languages="vm.profile.languages"
data-button-action="vm.backToFirstStep"
data-avatar="vm.profile.avatar"
)

pro-service-provider-summary-step(
data-consultations="vm.consultations"
data-edit-action="vm.editConsultation"
data-delete-action="vm.deleteConsultation"
)

  pro-service-provider-name(
  data-queue="vm.editQueue"
  data-order="1"
  data-pro-model="vm.editModel"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_PLACEHOLDER"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_DESCRIPTION"
  required
  )

  pro-service-provider-tags(
  data-queue="vm.editQueue"
  data-order="2"
  data-pro-model="vm.editModel"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_PLACEHOLDER"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_RANGE_TITLE"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_DESCRIPTION"
  required
  )

  pro-service-provider-cost(
  data-queue="vm.editQueue"
  data-order="3"
  data-pro-model="vm.editModel"
  data-list="vm.currency"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_COST_PLACEHOLDER"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  data-summary-text="DASHBOARD.CONSULTATION_RANGE.COST_SUMMARY"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_RANGE_COST_PER_MINUTE"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_COST_DESCRIPTION"
  required
  )

  pro-bottom-consultation-button(
  data-button-action="vm.updateConsultation"
  data-queue="vm.editQueue"
  data-order="4"
  data-button-label="DASHBOARD.CREATE_PROFILE.EDIT_CONSULTATION"
  )

div(data-ng-click="vm.currentEditConsultationId = -1")
  pro-service-provider-name(
  data-queue="vm.queue"
  data-order="1"
  data-pro-model="vm.costModel"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_PLACEHOLDER"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_DESCRIPTION"
  required
  )

  pro-service-provider-tags(
  data-queue="vm.queue"
  data-order="2"
  data-pro-model="vm.costModel"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_PLACEHOLDER"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_RANGE_TITLE"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_DESCRIPTION"
  required
  )

  pro-service-provider-cost(
  data-queue="vm.queue"
  data-order="3"
  data-pro-model="vm.costModel"
  data-list="vm.currency"
  data-placeholder="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_COST_PLACEHOLDER"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
  data-summary-text="DASHBOARD.CONSULTATION_RANGE.COST_SUMMARY"
  tr-title="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_RANGE_COST_PER_MINUTE"
  tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_COST_DESCRIPTION"
  required
  )

  div(data-ng-show="onCompany()")
    pro-service-provider-who-provides(
    data-queue="vm.queue"
    data-order="4"
    data-pro-model="vm.costModel"
    data-placeholder="DASHBOARD.CONSULTATION_RANGE.EMAIL_EXAMPLE"
    data-error-message="DASHBOARD.SERVICE_PROVIDER.CONSULTATION.EMPTY_FIELD"
    data-label="DASHBOARD.CONSULTATION_RANGE.I_PROVIDES_CONSULTATION"
    tr-title="DASHBOARD.CONSULTATION_RANGE.WHO_PROVIDES_DESCRIPTION"
    tr-desc="DASHBOARD.CONSULTATION_RANGE.CONSULTATION_NAME_DESCRIPTION"
    )

  pro-bottom-consultation-button(
  data-button-action="vm.addAnotherConsultation"
  data-queue="vm.queue"
  data-order="4"
  data-button-label="DASHBOARD.CREATE_PROFILE.NEXT_CONSULTATION")


pro-bottom-summary-row(
data-width="vm.progressBarWidth"
data-queue="vm.queue"
data-button-action="vm.saveConsultationObject "
data-order="4"
data-header="DASHBOARD.EXPERT_ACCOUNT.STEP2_PROGRESS_BAR_TITLE"
data-show-all-time="vm.isConsultationPresent()")
