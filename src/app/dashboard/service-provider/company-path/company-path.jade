.step.step-done(data-ng-hide="vm.inEditMode")
  .default-container-small
    .title-step
      .step-description
        span.step-counter(data-translate="DASHBOARD.CREATE_PROFILE.STEP" data-translate-values="{step: 1, steps: {{ vm.queue.amountOfSteps }} }")
        span.icon.icon-success-24
        
      .title-order
        h3.choose-path-title(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_TITLE")
        p.choose-path-description(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_DESCRIPTION")

    .step-content
      a.service-option(data-ui-sref="app.dashboard.service-provider.individual-path")
        span.icon.icon-person-128
        p(data-translate="DASHBOARD.MENU.STEP1_ONE_PERSON")
        span.icon.icon-success-12
        
      a.service-option.selected(data-ui-sref="app.dashboard.service-provider.company-path")
        span.icon.icon-multiperson-128
        p(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_MORE_PERSON")
        span.icon.icon-success-12

