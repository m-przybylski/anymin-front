  data-queue="vm.queue"
  data-order="2"
  data-pro-model="vm.companyPathModel"
  data-placeholder="DASHBOARD.CREATE_PROFILE.NAME_COMPANY_PLACEHOLDER"
  data-error-message="DASHBOARD.SERVICE_PROVIDER.NAME.BAD_COMPANY_NAME"
  tr-title="DASHBOARD.CREATE_PROFILE.STEP2_TITLE"
