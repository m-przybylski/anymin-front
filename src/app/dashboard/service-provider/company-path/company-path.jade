.step.step-done(data-ng-hide="vm.inEditMode")
  .title-step
    .title-order
      h3(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_TITLE")
      p(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_CHOOSE_PROFILE_DESCRIPTION")
    div
      .step-description
        span.step-counter(data-translate="DASHBOARD.CREATE_PROFILE.STEP" data-translate-values="{step: 1, steps: {{ vm.queue.amountOfSteps }} }")
        span.icon.icon-success-24
  .step-content
    .option(data-ui-sref="app.dashboard.service-provider.individual-path")
      span.icon.icon-person-128
      span(data-translate="DASHBOARD.MENU.STEP1_ONE_PERSON")
    .option.selected(data-ui-sref="app.dashboard.service-provider.company-path")
      span.icon.icon-multiperson-128
      span.step-counter(data-translate="DASHBOARD.CREATE_PROFILE.STEP1_MORE_PERSON")

