form.input-form.set-email(name="emailForm" data-ng-submit="emailForm.$valid && vm.setNewEmail()" novalidate)

  input-primary(
  data-type="text"
  data-id="email"
  data-placeholder="REGISTER.SERVICE_EMAIL_PLACEHOLDER"
  data-ng-model="vm.email"
  data-input-text="REGISTER.SERVICE_EMAIL"
  data-ng-required="true"
  data-ng-pattern="vm.patternEmail"
  data-is-valid="vm.newEmail && vm.checkIsDisabled()"
  data-validation-text="REGISTER.CODE_REQUIRED"
  )

  validation-alert(
  data-alert-text="REGISTER.EMAIL_EXIST"
  data-is-visible="vm.emailExist && emailForm.$submitted && !vm.checkIsEmailExist()"
  )

  button.btn.btn-default(
    data-ng-disabled="!vm.checkIsDisabled()"
    data-ng-click="vm.onSubmit()"
    data-translate="REGISTER.DONE"
    type="submit")

