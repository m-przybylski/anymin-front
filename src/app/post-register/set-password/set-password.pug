.new-password
  .phone-handler
    p {{'REGISTER.USER_PHONE' | translate}} {{vm.msisdn.prefix}} {{vm.msisdn.number}}
      span.icon.icon-tiny.icon-success-12
  form.pro-input-form(name="passwordForm" data-ng-submit="passwordForm.$valid && vm.completeRegistration()" novalidate)

    pro-input-password(data-label="{{ 'REGISTER.SERVICE_PASSWORD' | translate }}"
    data-placeholder="{{ 'REGISTER.SERVICE_PASSWORD_PLACEHOLDER' | translate }}"
    data-ng-model="vm.password"
    data-id="password"
    data-on-change="vm.onPasswordChange"
    data-ng-pattern="vm.patternPassword"
    data-ng-class="{'invalid':passwordForm.password.$invalid && (passwordForm.password.$dirty || passwordForm.$submitted)}"
    required auto-focus)
    .input-error-messages
      .error.left(data-translate="REGISTER.VALID_PASSWORD" data-ng-show="passwordForm.password.$invalid && passwordForm.$submitted")
    password-strength-bar(data-current-class = "vm.passwordStrength")

    checkbox(
      id="acceptRules"
      data-input-text="LOGIN.ACCEPT_RULES"
      data-ng-model="vm.rulesAccepted"
      data-name="acceptRules"
      data-ng-required="vm.isRequired"
      data-validation="!vm.rulesAccepted"
      data-alert-text="REGISTER.VALID_CHECKBOX"
    )

    button.btn.btn-default(data-translate="LOGIN.NEXT" type="submit")
