table.uib-monthpicker(role='grid', aria-labelledby='{{::uniqueId}}-title', aria-activedescendant='{{activeDateId}}')
    thead
        tr
            th
                button.btn.btn-default.btn-sm.pull-left.uib-left(type='button', ng-click='move(-1)', tabindex='-1')
                    i.icon-arrow-left
            th
                button.btn.btn-default.btn-sm.uib-title(id='{{::uniqueId}}-title', role='heading', aria-live='assertive', aria-atomic='true', type='button', ng-click='toggleMode()', ng-disabled='datepickerMode === maxMode', tabindex='-1')
                    strong {{title}}
            th
                button.btn.btn-default.btn-sm.pull-right.uib-right(type='button', ng-click='move(1)', tabindex='-1')
                    i.icon-arrow-right
    tbody
        tr.uib-months(ng-repeat='row in rows track by $index')
            td.uib-month.text-center(ng-repeat='dt in row', role='gridcell', id='{{::dt.uid}}', ng-class='::dt.customClass')
                button.btn.btn-default(type='button', uib-is-class="\
        'btn-info' for selectedDt,\
        'active' for activeDt\
        on dt", ng-click='select(dt.date)', ng-disabled='::dt.disabled', tabindex='-1')
                    span(ng-class="::{'text-info': dt.current}") {{::dt.label}}