.similar-expert-slider
  .pro-expert-slider.single-container.slider-container

    a.btn.btn-arrow.arrow-left(data-ng-click="$ctrl.prevSlide()")
      span.icon.icon-arrow-left-16

    .slider-slides(data-ng-style="leftOffset" data-ng-swipe-left="nextSlide()")
      slider.slider-list(data-ng-transclude data-controlls="controlls" data-move-slides="-2")
        .slides.slider-header
          .slider-item
            div
              span.icon.icon-hands-32
              p
                span {{ $ctrl.title | translate }}

        .slides(data-ng-repeat="consultation in $ctrl.consultations"  data-ng-swipe-right="prevSlide()")
          .slider-item(data-ng-click=" $ctrl.goToProfile($ctrl.consultations[$index])")
            .single-consultation
              .consultation-wrapper
                .consultation-content
                  .consultation-actions
                    .consultation-profile
                      a.thumb
                        img.user-avatar( data-ng-class="{'is-not-uploaded': !$ctrl.consultationOwnerImage(consultation.owner.img)}" data-ng-src=" {{ $ctrl.consultationOwnerImage(consultation.owner.img) }}")

                        .status-list
                          span.status.availability

                      .author
                        h6
                          a {{ consultation.owner.name }}

                  .consultation-details
                    .consultation-price
                      h5 {{ consultation.price / 100}}
                        span.currency(data-translate="HOME.TOP_CONTAINER.EXPERT_PROFILE.CURRENCY_PER_MINUTE")

                    .consultation-profile
                      .consultation-info
                        h3
                          a {{ consultation.name }}

                        ul.consultation-options
                          li.options-item
                            span  {{ consultation.satisfaction }}
                          li.options-item
                            span {{ consultation.numberOfCalls }}
                          li.options-item
                            span Stan Twojego konta pozwala na ok. 10 min rozmowy


    a.btn.btn-arrow.arrow-right(data-ng-click="$ctrl.nextSlide()")
      span.icon.icon-arrow-right-16
