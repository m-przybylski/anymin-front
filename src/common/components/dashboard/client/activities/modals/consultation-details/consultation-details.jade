scrollable(data-is-fullscreen="isFullscreen" data-is-navbar="isNavbar")
  top-modal-navbar(data-title="COMMUNICATOR.MODALS.SUMMARY_CONVERSATION" data-on-close="onModalClose")
  .consultation-details-modal
    preloader(data-is-loading="isLoading")
      .client-conversation-details-modal
        .default-container-small
          .profile-preview.vertical-preview
            .thumb.x48
              img.user-avatar(src ng-src="{{ expertAvatar }}")

            .profile-name
              a
                span {{ expertName }}

            .consultation-title
              h3 {{ serviceName }}

          .details-tab
            .details-tab-row.header-row
              .details-tab-label
                span(data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.COST")
              .details-tab-content(data-ng-bind-html="callCost | money")

            .details-tab-row
              .details-tab-label
                span(data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TIME_CONVERSATION")
              .details-tab-content
                span {{ callDuration | millisecondsToDatetime | date: 'HH:mm:ss' }}
            .details-tab-row
              .details-tab-label
                span(data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.DATE_AND_TIME")
              .details-tab-content
                span {{ startedAt | date: 'dd-MM-yyyy HH:mm ' }}
            .details-tab-row
              .details-tab-label
                span(data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.CONSULTATION_ID")
              .details-tab-content
                span {{ sueId }}
            .details-tab-row
              .details-tab-label
                span(data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.CONVERSATION_PRICE_MIN")
              .details-tab-content(data-ng-bind-html="callCostPerMinute | money")

          client-recommended-tags(data-ng-if="isRecommendable"
          data-selected-tags="recommendedTags" data-is-recommended="isRecommended"
          data-service-usage-event-id="sueId"
          data-tags="serviceTags")

          collapse-btn.chat-history(data-title="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.CHAT.BUTTON"
          data-icon="icon-chat-24")
            client-consultation-details-chat()

          collapse-btn(data-title="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.COMPLAINS.BUTTON"
          data-icon="icon-complaint-24")
            client-complain(data-on-complain-open="onModalClose")

          .btn.btn-collapse(data-ng-click="onModalClose()")
            .collapse-btn-wrapper
              .btn.collapse-btn-header
                div
                  span.icon.icon-history-24
                  span(
                  data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.HISTORY_OF_CONVERSATION.BUTTON")
