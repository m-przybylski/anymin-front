.client-filters
  .client-filters-collapse(data-ng-class="{'is-collapsed': $ctrl.showMobileFilters}")
      .client-filter
          pro-dropdown(data-pro-model='model.sortBy' data-label="{{::'DASHBOARD.CLIENT.FILTER.ACTIVITIES' | translate }}" data-placeholder="{{::'SEARCH.SATISFIED_PERCENT' | translate }}" data-pro-items="sortList" data-no-search)

          pro-dropdown(data-pro-model='model.language' data-label="{{::'DASHBOARD.CLIENT.FILTER.EXPERTS' | translate }}" data-placeholder="{{::'SEARCH.ALL_LANGUAGES' | translate }}" data-pro-items="languagesList" data-no-search)

          pro-dropdown(data-pro-model='model.category' data-label="{{::'DASHBOARD.CLIENT.FILTER.CONSULTATIONS' | translate }}" data-placeholder="{{::'SEARCH.ALL' | translate }}" data-pro-items="categoryList" data-no-search)

          div.filter-download
              .calendar
                  pro-calendar(data-ng-model="$ctrl.dt" data-placeholder="Placeholder" data-defaultValue="true" data-label="{{:: 'DASHBOARD.CLIENT.FILTER.FROM' | translate }}")
                  pro-calendar(data-ng-model="$ctrl.dt" data-placeholder="Placeholder" data-defaultValue="true" data-label="{{:: 'DASHBOARD.CLIENT.FILTER.TO' | translate }}")

              a.btn.btn-primary
                  span.icon.icon-download-report-24

  .collapse-btn-filter( data-ng-click="$ctrl.showFilters()")
      .btn.btn-noborder
          span.icon.icon-filter-24.icon-24
          span(data-ng-show="$ctrl.showMobileFilters") {{ 'SEARCH.MOBILE_FILTER_BUTTON.OPEN' | translate }}
          span(data-ng-show="!$ctrl.showMobileFilters") {{ 'SEARCH.MOBILE_FILTER_BUTTON.CLOSE' | translate }}
