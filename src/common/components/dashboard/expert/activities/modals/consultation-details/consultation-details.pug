.modal-summary
  .modal-main.container-medium
    top-modal-navbar(data-on-close="vm.onModalClose")
    preloader(data-is-loading="vm.isLoading")
      .modal-header
        .profile-preview.vertical-preview
          .thumb.x96
            user-avatar(data-image-token="vm.expertAvatar")

          .profile-name
            a
              span {{ vm.expertName }}

          .consultation-title.profile-consultation-title
            h3
              span {{ vm.serviceName }}

      .modal-container
        .details-tab
          .details-row.details-header-row
            .details-tab-label

          .details-tab-row
            .details-tab-label
              span(data-translate="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.INCOME")
            .details-tab-content
              .price-section(data-ng-bind-html="vm.callCost | money")

          .details-tab-row
            .details-tab-label
              span(data-translate="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.CONSULTATION_ID")
            .details-tab-content
              span {{ vm.sueId }}

          .details-tab-row
            .details-tab-label
              span(data-translate="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.DATE")
            .details-tab-content
              span {{ vm.startedAt | date: 'dd-MM-yyyy' }}

          .details-tab-row
            .details-tab-label
              span(data-translate="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TIME")
            .details-tab-content
              span {{ vm.startedAt | date: 'HH:mm' }}

          .details-tab-row
            .details-tab-label
              span(data-translate="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TIME_CONVERSATION")
            .details-tab-content
              span {{ vm.callDuration | millisecondsToDatetime | date: 'HH:mm:ss' }}


        tags-list(data-title="DASHBOARD.EXPERT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.RECOMMENDED_TAGS.TITLE"
        data-tags="vm.recommendedTag" data-ng-if='vm.isRecommended')

      collapse-btn.technical-problems(
        data-title="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TECHNICAL_PROBLEMS.BUTTON"
      )
        form(novalidate)
          radio-btn-text(
            data-ng-repeat="reason in vm.complaintReasons"
            data-ng-model="vm.model.value"
            value="{{ reason.id }} "
            data-id="{{ reason.id }}"
            data-label="{{ reason.name }}"
            data-is-descriptive="reason.isDescriptive"
            data-ng-class="{'is-active': vm.isSelected(reason)}"
          )

          .btn-group
            button.btn.btn-primary(
            data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TECHNICAL_PROBLEMS.CANCEL")

            button.btn.btn-default(
            data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TECHNICAL_PROBLEMS.SEND")


      collapse-btn.report-client(
        data-title="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.REPORT_CLIENT.BUTTON"
      )
        textarea-primary(
          data-ng-model="vm.clientReportModel"
          data-id="client_report"
          data-input-text="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.REPORT_CLIENT.TEXTAREA.LABEL"
          data-max-length="600"
        )

        .btn-group
          button.btn.btn-primary(
          data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TECHNICAL_PROBLEMS.CANCEL")

          button.btn.btn-default(
          data-translate="DASHBOARD.CLIENT.ACTIVITIES.MODALS.CONSULTATION_DETAILS.TECHNICAL_PROBLEMS.SEND")
