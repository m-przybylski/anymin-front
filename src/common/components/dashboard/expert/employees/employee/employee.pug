.expert-employees
  .employees-list-container(data-ng-click=":: $ctrl.openEmployeeDescriptions()")
    .list-row
      .employee-informations
        checkbox(
          id="idEmployee"
          data-ng-model='$ctrl.isChecked'
        )
        .profile-preview
          .thumb.x48
            user-avatar
        .employee-details
          .employee-name-container
            span Tomek Bolek
          .employee-consultation-count-container
            span 1 kosultacja

      .employee-buttons-container
        a.btn.btn-link(data-translate="DASHBOARD.EXPERT_ACCOUNT.EMPLOYEES.DELETE_BUTTON")
        a.bnt.btn-link(data-translate="DASHBOARD.EXPERT_ACCOUNT.EMPLOYEES.INVITATION_BUTTON")
