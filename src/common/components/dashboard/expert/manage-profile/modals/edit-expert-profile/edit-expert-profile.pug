div
  .modal-primary.container-big.edit-expert-profile
    top-modal-navbar(data-title="COMMUNICATOR.MODALS.SUMMARY_CONVERSATION" data-on-close="vm.onModalClose")
    preloader(data-is-loading="vm.isLoading")
      form(name="editProfileForm" novalidate)
        .profile-avatar
          wizard-avatar(
          data-avatar-token="vm.profileAvatarToken"
          data-is-valid="vm.isAvatarValid()"
          data-validation-text="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_AVATAR.VALIDATION_TEXT"
          data-is-submitted="vm.isSubmitted")

        div
          input-primary(
          data-type="text"
          data-id="inputText"
          data-placeholder="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_NAME.TITLE"
          data-ng-model="vm.profileName"
          data-input-text="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_NAME.TITLE"
          data-ng-required="true"
          data-max-length="{{vm.inputNameMaxLength}}"
          data-is-submitted="vm.isSubmitted"
          data-validation-text="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_NAME.VALIDATION_TEXT"
          data-is-valid="vm.isNameValid()"
          )

        div
          textarea-primary(
          data-input-text="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_DESCRIPTION.TITLE"
          data-placeholder="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_DESCRIPTION.TITLE"
          data-ng-model="vm.profileDescription"
          data-id="edit_expert_area"
          data-max-length="{{vm.inputDescriptionMaxLength}}"
          data-is-submitted="vm.isSubmitted"
          data-validation-text="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_DESCRIPTION.VALIDATION_TEXT"
          data-is-valid="vm.isDescriptionValid()"
          )

        div
          wizard-links(
            data-label="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.LINKS.LABEL"
            data-hint="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.LINKS.HINT"
            data-placeholder="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.LINKS.PLACEHOLDER"
            data-order="6"
            data-pro-model="vm.companyPathModel"
            data-selected-links="vm.profileLinks"
          )

        div
          wizard-uploader(
          data-token-list="vm.profileFilesTokens"
          data-is-valid-callback="vm.onUploadingFile")

        // TODO Create file uploader: https://git.contactis.pl/itelo/profitelo/issues/1014

    .modal-action
      button.btn.btn-default(data-translate="DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.EXPERT_NAME.BUTTON.SAVE"
      data-ng-click="vm.saveChanges()")

