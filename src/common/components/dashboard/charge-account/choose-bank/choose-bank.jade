.choose-bank
  .title
    h3(data-translate="{{ vm.title }}")
    
  .choose-options
    .choose-options-item(data-ng-repeat="bank in vm.bankList")
      .option(data-ng-class="{'selected': vm.activeOption == $index}" data-ng-click="vm.activeOption = $index")
        .option-thumb
          img(ng-src="{{ bank.img }}")
        p {{ bank.name }}
        span.icon.icon-success-12.top-right.circle(data-ng-show="vm.activeOption == $index")
