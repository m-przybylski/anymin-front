.service-suggestions
  .dropdown-default(data-ng-if="vm.services.count")
    h5.title-row  {{'SEARCH.SERVICES' | translate}}

    .consultations-box.dropdown-category-list
      a.expert-box.dropdown-list-item(data-ng-repeat="service in vm.services.results track by $index"
      data-ui-sref="app.expert-profile({ contactId: service.owner.id })")
        .expert-profile
          .thumb
            img.expert-avatar.user-avatar(src='http://placekitten.com/48/48')
            .status-list
              span.status.availability
          .expert-data
            span.expert-name {{ service.owner.name }}

        .service-description(ng-bind-html="service.name | searchBoldFilter:vm.searchModel")
          p {{ service.name }}