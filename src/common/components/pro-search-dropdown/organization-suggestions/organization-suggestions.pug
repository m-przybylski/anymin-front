.organization-suggestions
  .dropdown-default(data-ng-if="vm.organizations.count")
    h5.title-row  {{'SEARCH.ORGANIZATIONS' | translate}}

    .organization-box.dropdown-category-list
      a.profile-preview.dropdown-list-item(data-ng-repeat="organization in vm.organizations.results"
      data-ui-sref="app.company-profile({ profileId: organization.id })")
        .profile-preview
          user-avatar.thumb.x48(data-image-token="organization.img")

        span.expert-data
          span.expert-name(ng-bind-html="organization.name | searchBoldFilter:vm.searchModel") {{ organization.name }}
