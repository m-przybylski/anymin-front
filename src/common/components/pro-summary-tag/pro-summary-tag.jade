.pro-summary-tag
  .title-row
    | {{ ::vm.title | translate }}
    span {{ vm.tags.length }}
       
  ul.slider-tag
    li(ng-repeat="tag in vm.tags track by $index")
      span.pro-tag {{ ::tag }}
  
    li.showMoreTagsBtn(data-ng-show="vm.showTags" data-ng-click="vm.showMoreTags()")
      a
        span.pro-tag(data-ng-show="!(vm.showTagClass)") ...
        span.pro-tag.icon.icon-arrow-up-12(data-ng-show="vm.showTagClass")
