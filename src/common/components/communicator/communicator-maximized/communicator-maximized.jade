.communicator-maximized
  .communicator-conversation-header-details(data-ng-hide="vm.isConnecting")
    .consultation-actions
      .consultation-profile
        .thumb
          img.user-avatar(src data-ng-src="{{ vm.expert.expertDetails.avatar }}")

        div
          .author
            h6
              a {{ vm.expert.expertDetails.name }}
          .communicator-conversation-title
            p {{ vm.service.details.name }}
          .communicator-counter
            span {{ vm.callLengthInSeconds | secondsToDateTime | date:'HH:mm:ss'}}
            span {{ vm.callCost | money }}

  .communicator-content
    p.call.connecting-with(data-translate="COMMUNICATOR.CONNECTING_WITH" data-ng-show="vm.isConnecting")
    p.call.connecting-with(data-translate="COMMUNICATOR.AUDIO_CONVERSATION" data-ng-hide="vm.isConnecting")
    span.communicator-conversation-client {{ vm.expert.expertDetails.name }}

    .communicator-current-profile
      .communicator-equalizer
        span.circle
        span.circle
        span.circle

      .communicator-user.thumb
        img.user-avatar.communicator-avatar(src data-ng-src="{{ vm.expert.expertDetails.avatar }}")

    .communicator-conversation-details(data-ng-hide="vm.isConnecting")
      .communicator-conversation-title
        p {{ vm.service.details.name }}

      .communicator-counter
        span {{ vm.callLengthInSeconds | secondsToDateTime | date:'HH:mm:ss' }}
        span {{ vm.callCost | money }}

  .video-player-local(data-ng-show="vm.isLocalVideo")
    video(autoplay="true")

  .video-player-remote(data-ng-show="vm.isRemoteVideo")
    video(autoplay="true")

  communicator-nav(data-minimize-communicator="vm.minimizeCommunicator" data-is-video="vm.isLocalVideo" hangup-call="vm.hangupCall")