.communicator-nav
  .communicator-upper-nav
    .communicator-window-nav
      a.btn.btn-circle.black(data-ng-click="vm.minimizeCommunicator(); vm.animateButtons($event)")
        span.icon.icon-shrink-24
      a.btn.btn-circle.black(data-ng-click="vm.toggleOptions($event)")
        span.icon.icon-dots-menu-24

  .communicator-lower-nav
    a.btn.btn-circle.black(data-ng-click="vm.toggleAudio($event)")
      span.icon.icon-mic-on-24(data-ng-show="vm.isAudio")
      span.icon.icon-mic-off-24(data-ng-hide="vm.isAudio")

    a.btn.btn-circle.cancel-conversation(data-ng-click="vm.animateButtons($event); vm.hangupCall()")
      span.icon.icon-reject-24

    a.btn.btn-circle.black(data-ng-click="vm.toggleVideo($event)")
      span.icon.icon-camera-on-24(data-ng-show="vm.isVideo")
      span.icon.icon-camera-off-24(data-ng-hide="vm.isVideo")

    a.btn.btn-circle.black.chat-switcher(data-ng-click="vm.toggleMessenger($event)")
      span.icon.icon-chat-24(data-ng-hide="vm.isMessenger")
      span.icon.icon-close-16(data-ng-show="vm.isMessenger")
      messenger-maximized-meassage-incoming(data-ng-show="vm.isTypingMessage")