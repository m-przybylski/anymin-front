.pro-text-chat(data-ng-show="$ctrl.showChat")
  .chat-conversation
    pro-text-chat-message(data-ng-repeat = "message in messages" data-model="message")
  .chat-input
    pro-text-chat-input(data-placeholder="{{ 'COMMUNICATOR.TEXT_CHAT.INPUT_PLACEHOLDER' | translate }}"
    data-ng-model="newMessage"
    send-message-action="sendMessage"
    upload-file-action="uploadFile")