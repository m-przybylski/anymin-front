.avatar-uploader

  user-avatar.thumb.x192(data-image-token="$ctrl.avatarToken" data-ng-hide="$ctrl.isUserUploadImage")
    preloader(data-is-loading="$ctrl.isLoading")
      a.thumb-options.remove-photo(data-ng-show="$ctrl.avatarToken && $ctrl.avatarToken.length > 0"
      data-ng-click="$ctrl.removePhoto()")
        .icon.icon-close-16

      local-avatar-uploader.local-avatar-uploader(on-file-upload='$ctrl.addPhoto' data-ng-hide="$ctrl.avatarToken && " +
      "$ctrl.avatarToken.length > 0"
      )

  .crop-avatar-step(data-ng-show="$ctrl.isUserUploadImage")
    .cropp-image
      image-crop-component(data-image-src="$ctrl.imageSource" data-save-crop-avatar='$ctrl.saveCrop')

validation-alert(
data-alert-text="{{$ctrl.validationText}}"
data-is-visible="$ctrl.isSubmitted && !$ctrl.avatarToken.length > 0 || !$ctrl.avatarToken.length > 0 && !$ctrl.isFocus"
)

validation-alert(
  data-alert-text="WIZARD.CREATE_PROFILE.UPLOAD_FAILED"
  data-is-visible="$ctrl.isFileUploadError"
)

validation-alert(
  data-alert-text="WIZARD.CREATE_PROFILE.FILE_FORMAT_ERROR"
  data-is-visible="$ctrl.isFileFormatError"
)

validation-alert(
data-alert-text="WIZARD.CREATE_PROFILE.FILE_SIZE_ERROR"
data-is-visible="$ctrl.isFileSizeError"
)
