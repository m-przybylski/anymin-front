.single-consultation-edit
  .consultation-wrapper
    .consultation-section
      .consultation-details
        .consultation-price
          span(data-ng-bind-html="::$ctrl.price | money")
          span.currency(data-translate='HOME.TOP_CONTAINER.EXPERT_PROFILE.CURRENCY_PER_MINUTE')

        div
          .consultation-title
            h3
              span {{ ::$ctrl.name }}

      tags-list(data-tags="$ctrl.tagsList")

      .employee-list(data-ng-if="$ctrl.isEmployee")
        p(data-translate="WIZARD.SUMMARY.EMPLOYEES.LABEL")
        tags-list(data-tags="$ctrl.employeeList")

    .consultation-actions
      span.icon.icon-trash-24
      span.icon.icon-edit-16

