extends ../../../../templates/wizard/section-controlls.partial.jade





block edit-section
  form.tag-wizard(novalidate="" role="form" name="createNewServiceForm" data-ng-hide="config.toggles.past && !config.toggles.beingEdited")
    h2.text-center.margin-top-100 NEXT STEP
    div.tag-box-container
      input(type="email" name="inputEmail" data-ng-pattern="emailPattern")



block done-section
  h5.color-secondary.uppercase.text-bold {{ 'COMMON.DIRECTIVES.PRO_CREATE_NEW_SERVICE_NAME.INDUSTRY_NAME' | translate }}
  span(data-ng-repeat="(key, value) in model.tagMap" data-ng-if="value==true") {{ key }},