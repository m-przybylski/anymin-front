div(data-ng-show="config.toggles.show || config.toggles.past" data-ng-class="{'is-past': config.toggles.past, 'being-edited': config.toggles.beingEdited}")
  form.category-wizard(novalidate="" role="form" name="createNewServiceForm" data-ng-hide="config.toggles.past && !config.toggles.beingEdited")
    h2.text-center.margin-top-100 KATEGORIA
    div.category-box-container
      div(data-ng-class="singleCategory == selectedCategory ? 'category-box-selected' : 'category-box'"
      data-ng-repeat="singleCategory in categories" data-ng-click="selectCategory(singleCategory)")
        span
        span {{ singleCategory }}
        i.icon.icon-yes




  div(data-ng-hide="!config.toggles.past || config.toggles.beingEdited")
    h5.color-secondary.uppercase.text-bold {{ 'COMMON.DIRECTIVES.PRO_CREATE_NEW_SERVICE_NAME.CATEGORY_NAME' | translate }}
    span {{ selectedCategory }}


