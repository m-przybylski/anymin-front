.container
  #loginbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style='margin-top:50px;')
    .panel.panel-info
      .panel-heading
        .panel-title(data-ng-click="vm.step2()") Profitelo / Rejestracja
      .panel-body(style='padding-top:30px')
        form#loginform.form-horizontal(role="form" name="registerForm")
          .input-group(style='margin-bottom: 25px')
            span.input-group-addon
              i.fa.fa-envelope-o
            input#login-username.form-control(type="email", name="email", placeholder="E-mail" required data-ng-model="vm.userData.email")
          .input-group(style='margin-bottom: 25px')
            span.input-group-addon
              i.fa.fa-lock
            input#login-password.form-control(type="password", name="password", placeholder="Hasło")
          .col-lg-12
            p.text-center lub
            p.text-center  Zaloguj się za pomocą fejsbuka
          .form-group.center-block(style='margin-top:10px')
            .col-sm-12.controls.center-block
              input.btn.btn-info.col-lg-8.center-block(type="submit" data-ng-disabled="registerForm.$invalid" data-ng-click="vm.registrationMetaData.step1=false")

          div.text-center
            i.fa.fa-circle
            i.fa.fa-circle-o.margin-left-10
