.upload-field(ngf-drop ngf-select ng-model="files" class="drop-box"
ng-click="animate()"
ngf-drag-over-class="'dragover'" ngf-multiple="true" ngf-allow-dir="true"
accept="{{accept}}"
ngf-pattern="{{pattern}}")
    .upload-icons
        i.icon.icon-upload-cloud
        i.icon.icon-upload-arrow.icon-overlay
    .upload-description
        h3(data-translate="COMMON.DIRECTIVES.INTERFACE.UPLOADER.HEADER")
        p(data-translate="COMMON.DIRECTIVES.INTERFACE.UPLOADER.INFO")
    .upload-field-fill
