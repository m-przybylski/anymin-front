.input-group(data-ng-click="focusInput()"
  class="{{focus ? 'onFocus' : ''}} {{onOut ? 'onFocusOut' : ''}}")
  input(placeholder="{{placeholder}}"
  type="{{type}}"
  data-ng-model="proModel"
  data-ng-focus="onFocus()"
  data-ng-blur="onFocusOut()"
  data-ng-required="required"
  name="{{name}}")
  label {{label}}
  span(data-ng-class="{'input-group-addon' :addon}")
    i.icon(data-ng-class="iconClass") {{addonText}}
  span.cross-addon.icon.icon-tiny-close.icon-tiny(data-ng-show="proModel && !hideCross()" data-ng-click="proModel = ''")

