
.input-group(data-ng-click="focusInput()"
  class="{{focus ? 'onFocus' : ''}} {{onClick ? 'onClick' : ''}}"
  data-ng-mouseover="onMouseover()"
  data-ng-mouseleave="onMouseout()")
  input(placeholder="{{placeholder}}"
  type="{{type}}"
  data-ng-model="proModel"
  data-ng-focus="onFocus()"
  data-ng-blur="onFocusOut()"
  data-ng-maxlength = "maxlength"
  maxlength="{{maxlength}}"
  data-ng-required="required"
  data-ng-pattern="ngPattern"
  name="{{name}}")
  label {{label}}
  span(data-ng-class="{'input-group-addon' :addon}")
    i.icon(data-ng-class="iconClass") {{addonText}}
  span.cross-addon.icon-close-12(data-ng-show="proModel !== null && proModel !== '' && !hideCross()" data-ng-click="proModel = ''")

