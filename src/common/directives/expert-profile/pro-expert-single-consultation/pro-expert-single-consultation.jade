          i.icon.icon-headphone-16

    .title-row-consultation.footer-consultation
      p Tagi (18)
      .tags-consultation
        p(ng-repeat="tag in tags") {{tag}}

      p {{'HOME.TOP_CONTAINER.EXPERT_PROFILE.COMMENTS' | translate}} (100)
      .comments
        .help
          i.icon.icon-good-32
          p {{positiveMark}}
        .help
          i.icon.icon-bad-32
          p {{negativeMark}}
