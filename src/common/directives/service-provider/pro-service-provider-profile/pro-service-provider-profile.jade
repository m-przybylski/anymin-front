.pro-service-provider-profile
  .step.summary-step
    .summary-name.flex-row
      .summary-data.flex-row
        .summary-avatar(data-ng-show="!!avatar")
          img(ng-src="{{avatar}}" alt='user-avatar')
        .flex-col
          .firstname-lastname(data-ng-show="!!name")
            h2 {{name}}
          .languages(data-ng-show="!!languages && languages.length > 0")
              p {{"DASHBOARD.CREATE_PROFILE.PROFILE_LANGUAGE_HEADER" | translate}}
                span(data-ng-repeat="language in languages") &nbsp {{language}}
                btn-handler
      a.pro-button.round.icon.primary(data-ng-click="onClick()" data-ng-show="!!buttonAction")
        span.icon.icon-edit-16
    .summary-descriptions(data-ng-show="!!description")
      p(ng-bind-html="description | limitTo: textLimit")
      
      .read-more
        a.pro-icon.show-more-arrow(data-ng-show="description.length > textLimit" data-ng-click="showMoreText()" data-ng-class="{'hide-more': invertArrow}")
          span.icon.icon-arrow-down-12
