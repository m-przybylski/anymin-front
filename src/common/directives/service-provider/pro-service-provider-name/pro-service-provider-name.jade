extends ../../../templates/wizard/section-controlls.partial.jade

block content
  .step-content-column.pro-service-provider-name(data-ng-click="onClick()")
    pro-input(data-placeholder="{{placeholder | translate}}" data-ng-model="model.name" data-ng-class="{invalid: badName}" auto-focus ng-enter="onEnter()")
  .input-error-messages
    .error(data-translate="{{errorMessage}}" data-ng-show="badName")
