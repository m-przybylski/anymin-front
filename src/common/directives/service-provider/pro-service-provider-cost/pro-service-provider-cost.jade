extends ../../../templates/wizard/section-controlls.partial.jade

block content
  .step-content-column(data-ng-click="onClick()")
    .inputs-row
      .currency-input-box
        pro-input(data-placeholder="{{placeholder | translate}}" data-ng-model="model.cost" data-ng-class="{invalid: badName}" data-type="number" currency)
      .currency-dropdown-box
        pro-dropdown(data-pro-model='model.costname'
        data-label="{{'DASHBOARD.CONSULTATION_RANGE.CONSULTATION_CURRENCY_LABEL' | translate}}"
        data-placeholder="{{'DASHBOARD.CONSULTATION_RANGE.CURRENCY_PLACEHOLDER' | translate}}"
        data-pro-items="list" data-no-search disable)
    span.summary-text {{((model.cost / 1.25) | number)}}
    span.summary-text(data-translate="{{costSummary | translate: translationUrl}}")
  .input-error-messages
    .error(data-translate="{{errorMessage}}" data-ng-show="noCost")