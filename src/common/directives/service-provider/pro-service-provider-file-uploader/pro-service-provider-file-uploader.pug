extends ../../../templates/wizard/section-controlls.partial.pug

block content
    .step-content-column.pro-service-provider-file-uploader(data-ng-click="onClick()")
      .files-uploaded-list
        .file-item(data-ng-repeat="file in model.files track by $index" disable)
          .file-preview
            .thumb.x64
              img(src="{{file.file.name}}")

          .file-info
            span.file-name {{ file.file.name }}
            span.file-size {{:: 'DASHBOARD.EXPERT_ACCOUNT.MANAGE_PROFILE.MODAL.UPLOAD.FILE_SIZE' | translate }} 765mb

          .file-action
            span.icon.icon-trash-24(data-ng-click="removeFile(file)")

        .file-item
          pro-uploader(type="application/pdf,image/jpeg,image/png" files-uploaded="model.files" data-multiple data-ngf-pattern=".pdf,.jpg,.jpeg,.png" data-is-pending="isPending")

    .input-error-messages
      .error(data-translate="DASHBOARD.CREATE_PROFILE.FILE_ERROR" data-ng-show="error.badFiles && model.files.length < 1")
