.text-center.margin-top-60.center-flex
  p.text-center(data-ng-show="vm.registrationMetaData.emailSended")
    | {{ 'COMMON.DIRECTIVES.PRO_REGISTRATION.PARTIAL.STEP1.EMAIL_SENT' | translate }}
  form(name="registration" data-ng-show="!vm.registrationMetaData.emailSended" novalidate)
    div.round.center-block
      i.icon-2x.icon-talk-man.center-in-circle
    .pro-header.margin-top-10
      | {{'COMMON.DIRECTIVES.PRO_REGISTRATION.PARTIAL.STEP1.REGISTRATION' | translate }}
    div(data-pro-registration-input-email data-form="registration"
    data-name="email:" data-label-icon="icon-mail-with-at-sign" data-input-value="vm.userData.email" data-pattern="vm.settings.emailPattern"
    data-on-blur-function="vm.onBlurFunction()")

    div(data-pro-registration-input-pass data-form="registration"
    data-name="has≈Ço:" data-label-icon="icon-lock-3" data-input-value="vm.userData.password" data-pattern="vm.settings.passwordPattern")

    div.row.margin-top-20

    button.pro-button(type="button" data-ng-click="vm.registerSocial()")
      span
        i.icon-facebook.inline-block
        | {{ 'COMMON.DIRECTIVES.PRO_REGISTRATION.PARTIAL.STEP1.LOGIN_WITH_FACEBOOK'| translate}}
    div.row
    button.pro-button-light.margin-top-20(type="submit" data-ng-click="vm.sendAndGoNext()")
      | {{ 'COMMON.DIRECTIVES.PRO_REGISTRATION.PARTIAL.STEP1.CONTINUE' }}



