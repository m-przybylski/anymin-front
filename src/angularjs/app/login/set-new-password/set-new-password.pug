form.input-form.set-new-password(name="passwordForm"
data-ng-submit="passwordForm.$valid && vm.checkIsPasswordCorrect() && vm.submitPasswordChange()" novalidate)

  input-password(
  data-id="password"
  data-ng-model="vm.newPassword"
  data-input-text="REGISTER.SERVICE_PASSWORD"
  data-placeholder="REGISTER.SERVICE_PASSWORD_PLACEHOLDER"
  data-is-valid="vm.checkIsPasswordCorrect() || !vm.isServerError"
  data-validation-text="REGISTER.VALID_PASSWORD"
  data-is-submitted="passwordForm.$submitted"
  data-on-change="vm.onPasswordChange"
  auto-focus
  )

  .password-information
    span(data-translate="REGISTER.USER_PASSWORD_INFORMATION")

  .btn-handler.flex-row.login-handler
    button.btn.btn-default(data-translate="REGISTER.CHANGE_PASSWORD" type="submit" data-ng-click="vm.clickDisabledButton()"
    data-ng-class="{'disabled': !vm.checkIsPasswordCorrect()}")
    button.btn.btn-primary(data-ui-sref="app.login.account" data-translate="LOGIN.BACK")

  span.click-alert(
  data-translate="REGISTER.TOO_WEAK_PASSWORD_VALIDATION"
  data-ng-if="vm.isPasswordTooWeak && !vm.checkIsPasswordCorrect()")
