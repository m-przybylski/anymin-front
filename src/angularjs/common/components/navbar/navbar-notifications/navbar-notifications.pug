#notifications-menu.navbar-menu
  .notifications-menu-container
      ul.navbar-menu-header
        li.notifications-menu-mobile-header(data-ng-click="$ctrl.buttonCallback()")
          a
            span.icon.icon-back-24
            span(data-translate="DASHBOARD.MENU.NOTIFICATIONS.HEADER.BACK")
        ul.notifications-menu-desktop-header(data-ng-if="!$ctrl.isPlatformForExpert")
          li.notifications-tab(data-ng-click="$ctrl.showNotifications()"
            data-ng-class="{'is-animation' : $ctrl.isNotificationsTab}")
            a(data-translate="DASHBOARD.MENU.NOTIFICATIONS.HEADER.NOTIFICATIONS")
          li.invitations-tab(data-ng-click="$ctrl.showInvitations()"
            data-ng-class="{'is-animation' : $ctrl.isInvitationsTab}")
            a {{:: 'DASHBOARD.MENU.NOTIFICATIONS.HEADER.INVITATIONS' | translate}}
              span.invitations-count(data-ng-hide="$ctrl.areInvitationsDisplayed") (2)

      // isPlatformForExpert - after restore project to full functionality delete following 'notifications-lists-container'
      .notifications-lists-container(data-ng-if="$ctrl.isPlatformForExpert")
        ul.ng-hide(data-ng-show="$ctrl.areInvitations")
          li.notifications-menu-row(data-ng-click="$ctrl.onInvitationClick(invitation, $event)"
          data-ng-repeat="invitation in $ctrl.invitations | orderBy:'-'")
            div.invitation
              .profile-preview
                .thumb.x48
                  user-avatar(data-image-token="invitation.profile.organizationDetails.logo")
              div.details
                span.information(data-translate="DASHBOARD.MENU.NOTIFICATIONS.INVITATION_FROM")
                span.organization-name {{ invitation.profile.organizationDetails.name }}
                span.information(data-translate="DASHBOARD.MENU.NOTIFICATIONS.INVITATION_TO")
                ul.service-list
                  li.service(data-ng-repeat="singleService in invitation.services ")
                    p.service-name {{ singleService.service.name }}

        ul.ng-hide(data-ng-show="!$ctrl.areInvitations")
          li.notifications-menu-row.no-invitations
            no-results-information(data-icon-src="assets/images/profitelo_icons/icon_no_invite.png"
            data-information-title="DASHBOARD.MENU.NOTIFICATIONS.NO_INVITATIONS")

      .notifications-lists-container(data-ng-if="!$ctrl.isPlatformForExpert")
        ul.left-tab-animation.ng-hide(data-ng-show="$ctrl.isNotificationsTab")
          li.notifications-menu-row(data-ng-click="$ctrl.markAsRead($event)")
            div
              span.icon.icon-warning-24
              div
                span.notification-description A complaint concerning "Witarianizm - uk≈Çadanie diety" has been filed. We blocked 65,70 PLN on your Profitelo account.
                span.notification-time 2 days ago

          li.notifications-menu-row(data-ng-click="$ctrl.markAsRead($event)")
            div
              span.icon.icon-clock-24
              div
                span.notification-description Available in 15 minutes! Click to change.
                span.notification-time 2 days ago

          li.notifications-menu-row(data-ng-click="$ctrl.markAsRead($event)")
            div
              span.icon.icon-incoming-call-24
              div
                span.notification-description You have one missed call. Would you like to set unavailable?
                span.notification-time 2 days ago

          li.notifications-menu-row(data-ng-click="$ctrl.markAsRead($event)")
            div
              span.icon.icon-user-available-24
              div
                span.notification-description You're account is active now and you can start to pick up calls from your clients! If you don't want to talk right now. Set your availability.
                span.notification-time 2 days ago

        ul.right-tab-animation.ng-hide(data-ng-show="$ctrl.isInvitationsTab && $ctrl.areInvitations")
          li.notifications-menu-row(data-ng-click="$ctrl.onInvitationClick(invitation, $event)"
          data-ng-repeat="invitation in $ctrl.invitations | orderBy:'-'")
            div
              .profile-preview
                .thumb.x48
                  user-avatar(data-image-token="invitation.organizationDetails.logo")
              div
                span.notification-description {{ invitation.organizationDetails.description }}
                span.notification-time {{ invitation.createdAt }}

        ul.right-tab-animation.ng-hide(data-ng-show="$ctrl.isInvitationsTab && !$ctrl.areInvitations")
          li.notifications-menu-row.no-invitations
            no-results-information(data-icon-src="assets/images/profitelo_icons/icon_no_invite.png"
              data-information-title="DASHBOARD.MENU.NOTIFICATIONS.NO_INVITATIONS")
