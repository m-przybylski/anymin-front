.expert-employee(data-ng-if="!$ctrl.isEmploeeDeleted")
  .list-row
    .employee-informations
      .profile-preview
        user-avatar.thumb.x48(data-image-token="$ctrl.employeeAvatar")
      .employee-container
        .employee-details
          .employee-name-container
            span {{ $ctrl.employeeName }}
          .consultations-count-container
            span {{ $ctrl.employmentsCount | translate}}
            span.consultation-slug {{ $ctrl.consultationText }}
          .emmployee-consultation-list
            ul
              li(data-ng-repeat="consultation in $ctrl.employeeConsultations")
                span {{consultation.serviceName}}
                span.employment-type
                  span(data-ng-if="consultation.isFreelance") ({{ 'DASHBOARD.EXPERT_ACCOUNT.EMPLOYEES.TYPE.FREELANCE' | translate }})
                  span(data-ng-if="!consultation.isFreelance") ({{ 'DASHBOARD.EXPERT_ACCOUNT.EMPLOYEES.TYPE.EMPLOYEE' | translate }})

        .employee-button-container
          a.btn.btn-link(
          data-translate="DASHBOARD.EXPERT_ACCOUNT.EMPLOYEES.DELETE_BUTTON"
          data-ng-click="$ctrl.deleteEmployee()"
          )
