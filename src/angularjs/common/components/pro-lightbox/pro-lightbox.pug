pro-lightbox-nav(data-nav-settings="$ctrl.actionsSettings")
.modal-dialog.size(data-ng-class="{'add-overflow': $ctrl.currentSlide.contentType === 'application/pdf'}")
  .backdrop-area(data-ng-click="$ctrl.actionsSettings.closeLightbox()")
  .left-side
    button.arrow-slider(data-ng-click="$ctrl.sliderActions.prevSlide()" data-ng-show="$ctrl.currentSlide.id !== 1")
      span.icon.icon-arrow-left-16
  pro-lightbox-content.pro-lightbox-content(data-ng-repeat="slide in $ctrl.slidesList" data-slide="slide" id="slide-{{ slide.id }} " data-ng-class="{'currentSlide': $ctrl.currentSlide.id === slide.id}")
  .right-side
    button.arrow-slider(data-ng-click="$ctrl.sliderActions.nextSlide()" data-ng-show="$ctrl.currentSlide.id !== $ctrl.slidesList.length")
      span.icon.icon-arrow-right-16

.pro-lightbox-zoom(data-ng-show="$ctrl.currentSlide.contentType !== 'application/pdf'")
  div
    span.icon.icon-minus-12(data-ng-click="$ctrl.sliderActions.decreaseImg()")
    span.icon.icon-zoom.icon-zoom-out-24(data-ng-click="$ctrl.sliderActions.imageZoomReset()")
    span.icon.icon-plus-12(data-ng-click="$ctrl.sliderActions.increaseImg()")