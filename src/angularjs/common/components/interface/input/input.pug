.input(data-ng-click="$ctrl.onClick()" data-ng-class="{'is-invalid': !$ctrl.isValid " +
"&& !$ctrl.isFocus && $ctrl.validationText && $ctrl.isDirty," +
" 'is-focused': $ctrl.isFocus}")
  label.label-text(data-ng-if="$ctrl.inputText") {{:: $ctrl.inputText | translate }}
  span.is-required(data-ng-if="$ctrl.ngRequired") *

  input(
    type="{{$ctrl.type}}"
    id="{{$ctrl.id}}"
    name="{{$ctrl.id}}"
    maxlength="{{$ctrl.maxLength}}"
    placeholder="{{ $ctrl.placeholder | translate }}"
    data-ng-model="$ctrl.ngModel"
    data-ng-required="$ctrl.ngRequired"
    data-ng-focus="$ctrl.onFocus()"
    data-ng-blur="$ctrl.onBlur()"
    data-ng-change="$ctrl.onInputChange($ctrl.ngModel)"
    data-value-length="$ctrl.setInputValueLength"
    data-input-value="$ctrl.ngModel"
  )

.input-sign-counter(data-ng-show="$ctrl.maxLength")
  span.label {{ $ctrl.inputValueLength || 0 }}
  span.label  / {{ $ctrl.maxLength }} {{:: 'INPUT.CHARACTERS.TITLE'	 | translate }}

validation-alert(
  data-alert-text="{{$ctrl.validationText}}"
  data-is-visible="!$ctrl.isValid && $ctrl.validationText && $ctrl.validationText.length > 0 && " +
  "!$ctrl.isFocus && $ctrl.isDirty || $ctrl.isSubmitted && !$ctrl.isValid && $ctrl.validationText && " +
  "$ctrl.validationText.length > 0"
)
