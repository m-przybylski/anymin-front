.widget-generator
  .information
    h3 {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.INFORMATION_HEADER' | translate }}
    p {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.INFORMATION_PARAGRAPH' | translate }}

  section
    h4 {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.HEAD_SCRIPT_SECTION_HEADER' | translate }}
    p {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.HEAD_SCRIPT_SECTION_PARAGRAPH' | translate }}
    .html-code
      code {{ headScript }}
      a.btn.btn-large.btn-primary((click)="copyToClipboard(headScript)")
        | {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.COPY_BUTTON' | translate }}

  section
    h4 {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.SELECT_SECTION_HEADER' | translate }}
    .dropdowns
      dropdown-primary(
      label="{{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.SELECT_SECTION_EXPERTS_DROPDOWN_LABEL' | translate }}",
      [mainList]="expertList",
      [onSelectMain]="selectExpert",
      [placeholder]="'DASHBOARD.EXPERT_ACCOUNT.WIDGET.SELECT_SECTION_EXPERTS_DROPDOWN_PLACEHOLDER' | translate")

      dropdown-primary(
      label="{{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.SELECT_SECTION_SERVICES_DROPDOWN_LABEL' | translate }}",
      [mainList]="serviceList",
      [(selectedItem)]="selectedService",
      [onSelectMain]="selectConsultation",
      [placeholder]="'DASHBOARD.EXPERT_ACCOUNT.WIDGET.SELECT_SECTION_SERVICES_DROPDOWN_PLACEHOLDER' | translate")

  section
    h4 {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BUTTONS_SECTION_HEADER' | translate }}
    p {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BUTTONS_SECTION_PARAGRAPH' | translate }}
    form(name="radio-form")
      radio-btn([ngModel]="radioModel", [ngModelOptions]="{standalone: true}", [onClick]="selectRadio",
        value="static", inputName="buttons", inputId="staticBtn"
        label="{{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BUTTONS_SECTION_STATIC_RADIO_LABEL' | translate }}" ngDefaultControl)
      radio-btn([ngModel]="radioModel", [ngModelOptions]="{standalone: true}", [onClick]="selectRadio",
        value="flatten", inputName="buttons", inputId="flattenBtn"
        label="{{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BUTTONS_SECTION_FLATTEN_RADIO_LABEL' | translate }}" ngDefaultControl)

  section(*ngIf="bodyScript && (expertId || serviceId)")
    h4 {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BODY_SCRIPT_SECTION_HEADER' | translate }}
    p {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.BODY_SCRIPT_SECTION_PARAGRAPH' | translate }}
    .html-code
      code {{ bodyScript }}
      a.btn.btn-large.btn-primary((click)="copyToClipboard(bodyScript)")
        | {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.COPY_BUTTON' | translate }}

  section
    .generate-btn
      button.btn.btn-large.btn-primary((click)="generateWidgetCode(expertId, serviceId)",
      *ngIf="(expertId || serviceId)", [disabled]="isWidgetGenerating")
        | {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.GENERATE_BUTTON' | translate }}
      p.validation-alert(*ngIf="isError") {{ 'DASHBOARD.EXPERT_ACCOUNT.WIDGET.VALIDATION_ERROR' | translate }}
