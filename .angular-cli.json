{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "anymind-platform"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        {
          "glob": "*.js",
          "input": "../node_modules/angular-i18n",
          "output": "./assets/angular-i18n"
        },
        {
          "glob": "*",
          "input": "./root/",
          "output": "./"
        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": ["styles.sass"],
      "scripts": [
        "../node_modules/jquery/dist/jquery.min.js",
        "../node_modules/perfect-scrollbar/dist/js/perfect-scrollbar.jquery.js",
        "../node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js"
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "tslintConfig": "./tslint.app.json",
      "exclude": [
        "**/node_modules/**",
        "**/angularjs/**/*.ts",
        "**/generated_modules/**",
        "**/*actions.ts",
        "**/*.spec.ts"
      ]
    },
    {
      "project": "src/tsconfig.app.json",
      "tslintConfig": "./tslint.actions.app.json",
      "files": ["**/*.actions.ts"]
    },
    {
      "project": "src/tsconfig.spec.json",
      "tslintConfig": "./tslint.spec.json",
      "files": ["**/*.spec.ts"],
      "exclude": ["**/node_modules/**", "**/angularjs/**/*.ts", "**/generated_modules/**"]
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "sass",
    "component": {}
  }
}
