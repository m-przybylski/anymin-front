{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "anymind-platform"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        {
          "glob": "*",
          "input": "./root/",
          "output": "./"
        }
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": ["styles.sass"],
      "scripts": [],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    },
    {
      "name": "demo-app",
      "root": "projects/demo-app",
      "prefix": "test",
      "polyfills": "src/polyfills.ts",
      "main": "src/main.ts",
      "index": "src/index.html",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.app.json",
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "tslintConfig": "./tslint.app.json",
      "exclude": ["**/node_modules/**", "**/generated_modules/**", "**/*actions.ts", "**/*.spec.ts", "**/testing/**"]
    },
    {
      "project": "src/tsconfig.app.json",
      "tslintConfig": "./tslint.actions.app.json",
      "files": ["**/*.actions.ts"]
    },
    {
      "project": "src/tsconfig.spec.json",
      "tslintConfig": "./tslint.spec.json",
      "files": ["**/*.spec.ts"],
      "exclude": ["**/node_modules/**", "**/generated_modules/**"]
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "sass",
    "component": {}
  }
}
