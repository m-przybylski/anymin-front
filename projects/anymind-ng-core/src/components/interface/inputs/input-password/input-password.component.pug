.input-password.input(
	[formGroup]="formGroup",
	[ngClass]="{'input--focused': isFocused, 'input--invalid': isFieldInvalid(), 'input--disabled': isDisabled}")

	.input__container
		.input__label-container
			label.input__label(*ngIf="labelTrKey") {{ labelTrKey | translate }}
			span.input__required-asterix *

		.input__handler
			input(
			[autofocus]="initialFocus",
			[formControlName]="controlName",
			(focus)="onFocus()",
			(blur)="onBlur()",
			placeholder="{{ placeholderTrKey | translate }}",
			type="password",
			[readonly]="isDisabled"
			)

	.input__alert
		am-core-validation-alert(
		[isVisible]="isIncorrectPassword()",
		[validationTextKey]="'INPUT_PASSWORD.INCORRECT_PASSWORD_VALIDATION_ERROR'"
		)

		am-core-validation-alert(
		[isVisible]="isToManyUnsuccessfulAttempts()",
		[validationTextKey]="'INPUT_PASSWORD.UNSUCCESSFUL_ATTEMPTS_VALIDATION_ERROR'"
		)

		am-core-validation-alert(
		[isVisible]="isRequiredError()",
		[validationTextKey]="'INPUT.REQUIRED_VALIDATION_ERROR'"
		)
