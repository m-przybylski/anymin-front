.input-email.input(
[formGroup]="formGroup",
[ngClass]="{'input--focused': isFocused, 'input--invalid': isFieldInvalid(), 'input--disabled': isDisabled}")

  .input__container
    .input__label-container.input__label-container--tooltip
      .input__label-container
        label.input__label(*ngIf="labelTrKey") {{ labelTrKey | translate }}
        span.input__required-asterix(*ngIf="isRequired") *

      am-core-tooltip(*ngIf="tooltipTextKey", [tooltipText]="tooltipTextKey", placement="top-left")

    input(
    [formControlName]="controlName",
    (focus)="onFocus()",
    (blur)="onBlur()",
    [autofocus]="initialFocus",
    placeholder="{{ placeholderTrKey | translate }}",
    type="email",
    [readonly]="isDisabled"
    )

  .input__alert
    am-core-validation-alert(
    [isVisible]="isIncorrectEmail()",
    [validationTextKey]="'INPUT_EMAIL.INCORRECT_EMAIL_VALIDATION_ERROR'"
    )

    am-core-validation-alert(
    [isVisible]="isRequiredError()",
    [validationTextKey]="'INPUT.REQUIRED_VALIDATION_ERROR'"
    )

    am-core-validation-alert(
    [isVisible]="isEmailAlreadyExists()",
    [validationTextKey]="'INPUT_EMAIL.EMAIL_ALREADY_EXIST_VALIDATION_ERROR'"
    )
