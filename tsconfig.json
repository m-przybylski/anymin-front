{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "noImplicitAny": true,
    "target": "es5",
    "noEmitOnError": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "declaration": false,
    "lib": ["es2017", "dom"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@platform": ["src/app"],
      "@platform/*": ["src/app/*"],
      "@testing-app/*": ["projects/testing-app/src/app/*"],
      "@anymind-ng/core": ["projects/anymind-ng-core"],
      "@anymind-ng/core/*": ["projects/anymind-ng-core/*"],
      "testing/testing": ["src/testing/testing.ts"]
    },
    "typeRoots": ["node_modules/@types"]
  }
}
