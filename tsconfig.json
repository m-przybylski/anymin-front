{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "noEmitOnError": false,
    "sourceMap": true,
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    //"noImplicitThis": true, // TODO enable after rewriting all ctrls to classes
    //"noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types" : [
      "angular",
      "angular-animate",
      "angular-cookies",
      "angular-dynamic-locale",
      "angular-mocks",
      "angular-permission",
      "angular-resource",
      "angular-translate",
      "angular-ui-bootstrap",
      "angular-ui-router",
      "braintree-web",
      "node",
      "croppie",
      "jasmine",
      "jquery",
      "lodash",
      "masonry-layout",
      "perfect-scrollbar",
      "ng-file-upload",
      "raven-js"
    ]
  }
}
