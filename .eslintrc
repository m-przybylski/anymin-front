// 0 - off
// 1 - warning
// 2 - on

parser: 'babel-eslint'
rules:
  // Possible errors
  "valid-jsdoc": [1, { requireReturn: false, prefer: { return: "returns" }}]
  // no-obj-calls: 2
  "no-invalid-regexp": 2
  "comma-dangle": [2, "never"]
  "no-undef": 0 // we use angular modules so must be disabled
  "no-debugger": 2
  "no-extra-semi": 2
  "semi": [1, "never"]
  "no-unreachable": 2

  // Stylistic Issues
  "block-spacing": [2, "always"]
  "indent": [2, 2]
  "brace-style": [2, "1tbs", { "allowSingleLine": true }]
  "camelcase": 1
  "comma-spacing": [2, {"before": false, "after": true}]
  "comma-style": [2, "last"]
  "eol-last": 0
  "func-style": [2, "declaration", { "allowArrowFunctions": true }]
  "no-nested-ternary": 2
  "new-cap": 2
  "no-multiple-empty-lines": [2, {max: 4, maxEOF: 10}]
  "no-redeclare": [2, {"builtinGlobals": true}]
  "no-underscore-dangle": 0
  "no-trailing-spaces": 2
  "space-after-keywords": [2, "always"]
  "space-before-function-paren": [1, "never"]
  "space-before-blocks": 2
  "spaced-comment": [2, "always", { exceptions: ["-", "+"]}]
  "quotes": [1, "single", "avoid-escape"]


  // Best practices
  "eqeqeq": [2, "allow-null"]
  "default-case": 2
  "no-empty": 2
  "guard-for-in": 2
  "no-alert": 2
  "curly": [2, "all"]
  "no-new": 2
  "no-caller": 1
  "no-floating-decimal": 2
  "radix": 2
  "wrap-iife": 2


  // Strict
  strict: 0 // in ES6 is allways in strict mode


  // Variables
  "no-undefined": 2
  "no-use-before-define": 2
  "no-unused-vars": [0, {"vars": "local", "args": "after-used"}]
  "no-shadow": [1, {"builtinGlobals": false, "hoist": "functions", "allow": []}]
